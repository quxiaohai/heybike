    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    pointer-events: none;
  }

  .ai-hero-banner-content-wrapper-{{ ai_gen_id }} {
