      background-color: {{ block.settings.countdown_bg_color }};
      padding: 8px 12px;
      border-radius: 4px;
      min-width: 50px;
      position: relative;
      overflow: hidden;
    }

    .ai-hero-banner-countdown-value-{{ ai_gen_id }}::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 0;
      right: 0;
      height: 1px;
      background-color: rgba(0, 0, 0, 0.1);
    }
  {% endif %}

