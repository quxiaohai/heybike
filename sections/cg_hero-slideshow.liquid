<!-- View -->
<article class="slideshow-container" id="shopify-section-{{ section.id }}">
	<menu class="carousel carousel-main">
		{% for block in section.blocks %}
			<li class="carousel-cell carousel-cell-{{ forloop.index }}">
				<style>
					#shopify-section-{{ section.id }} .carousel-cell-{{ forloop.index }} { 
						{% if block.settings.banner_img != blank %}
							background-image: url({{ block.settings.banner_img | image_url: master }}); 
						{% endif %}
					}

					#shopify-section-{{ section.id }} .carousel-cell-{{ forloop.index }} .banner-inner { 
						{% if block.settings.text_alignment == 'left' %}
							align-items: flex-start; 
						{% elsif block.settings.text_alignment == 'center' %}
							align-items: center; 
						{% else %}
							align-items: flex-end; 
						{% endif %}

						transform: {% if block.settings.vertical_alignment == 'center' %}translateY(-50%){% endif %} {% if block.settings.horizontal_alignment == 'center' %}translateX(-50%){% endif %}; 
					}

					#shopify-section-{{ section.id }} .carousel-cell-{{ forloop.index }} .banner-inner * { 
						{% if block.settings.text_alignment != blank %}
							text-align: {{ block.settings.text_alignment }}; 
						{% endif %}
					}

					#shopify-section-{{ section.id }} .carousel-cell-{{ forloop.index }} .banner-subheading { 
						{% if block.settings.subheading_font_size != blank %}
							/* font-size: calc({{ block.settings.subheading_font_size }}vw / 19.2); */
							font-size: {{ block.settings.subheading_font_size }}px; 
						{% endif %}
						{% if block.settings.subheading_color != blank %}
							color: {{ block.settings.subheading_color }}; 
						{% endif %}
					}

					#shopify-section-{{ section.id }} .carousel-cell-{{ forloop.index }} .banner-heading { 
						{% if block.settings.subheading_font_size != blank %}
							/* font-size: calc({{ block.settings.heading_font_size }}vw / 19.2); */
							font-size: {{ block.settings.heading_font_size }}px; 
						{% endif %}
						{% if block.settings.heading_color != blank %}
							color: {{ block.settings.heading_color }}; 
						{% endif %}
					}

					#shopify-section-{{ section.id }} .carousel-cell-{{ forloop.index }} .banner-desc { 
						{% if block.settings.desc_color != blank %}
							color: {{ block.settings.desc_color }}; 
						{% endif %}
					}

					/* Responsive */
					/* Mobile */
					@media (max-width: 767px) { 
						#shopify-section-{{ section.id }} .carousel-cell-{{ forloop.index }} { 
							{% if block.settings.banner_img_mobile != blank %}
								background-image: url({{ block.settings.banner_img_mobile | image_url: master }}); 
							{% elsif block.settings.banner_img != blank %}
								background-image: url({{ block.settings.banner_img | image_url: master }}); 
							{% endif %}
						}

						#shopify-section-{{ section.id }} .carousel-cell-{{ forloop.index }} .banner-inner { 
							top: unset; 
							bottom: unset; 
							left: unset; 
							right: unset; 
							align-items: center; 
						}

						#shopify-section-{{ section.id }} .carousel-cell-{{ forloop.index }} .banner-inner * { 
							text-align: center; 
						}

						#shopify-section-{{ section.id }} .carousel-cell-{{ forloop.index }} .banner-subheading { 
							{% if block.settings.subheading_font_mobile != blank %}
								font-size: {{ block.settings.subheading_font_mobile }}px; 
							{% endif %}
						}

						#shopify-section-{{ section.id }} .carousel-cell-{{ forloop.index }} .banner-heading { 
							{% if block.settings.heading_font_mobile != blank %}
								font-size: {{ block.settings.heading_font_mobile }}px; 
							{% endif %}
						}
					}

					/* Tablet */
					@media (min-width: 768px) and (max-width: 1366px) { 
						{% comment %}
							#shopify-section-{{ section.id }} .carousel-cell-{{ forloop.index }} .banner-subheading { 
								{% if block.settings.subheading_font_size != blank %}
									font-size: calc({{ block.settings.subheading_font_size }}vw / 13.66); 
								{% endif %}
							}

							#shopify-section-{{ section.id }} .carousel-cell-{{ forloop.index }} .banner-heading { 
								{% if block.settings.heading_font_size != blank %}
									font-size: calc({{ block.settings.heading_font_size }}vw / 13.66); 
								{% endif %}
							}
						{% endcomment %}
					}

					/* Desktop */
					@media (min-width: 1920px) {
						#shopify-section-{{ section.id }} .carousel-cell-{{ forloop.index }} .banner-subheading { 
							{% if block.settings.subheading_font_size != blank %}
								font-size: {{ block.settings.subheading_font_size }}px; 
							{% endif %}
						}

						#shopify-section-{{ section.id }} .carousel-cell-{{ forloop.index }} .banner-heading { 
							{% if block.settings.heading_font_size != blank %}
								font-size: {{ block.settings.heading_font_size }}px; 
							{% endif %}
						}
					}
				</style>

				<!-- Desktop video -->
				{% if block.settings.banner_video != blank %}
					{{ block.settings.banner_video | video_tag: autoplay: true, loop: true, muted: true, controls: false, outline: false, controlList: nofullscreen, class: 'media desktop' }}
				{% endif %}
				<!-- Mobile video -->
				{% if block.settings.banner_video_mobile != blank %}
					{{ block.settings.banner_video_mobile | video_tag: autoplay: true, loop: true, muted: true, controls: false, outline: false, controlList: nofullscreen, class: 'media mobile' }}
				{% elsif block.settings.banner_video != blank %}
					{{ block.settings.banner_video | video_tag: autoplay: true, loop: true, muted: true, controls: false, outline: false, controlList: nofullscreen, class: 'media mobile' }}
				{% endif %}

				<div class="banner-inner">
					{% if block.settings.subheading != blank %}
						<p class="banner-subheading">{{ block.settings.subheading }}</p>
					{% endif %}
					{% if block.settings.heading != blank %}
						<h2 class="banner-heading">{{ block.settings.heading }}</h2>
					{% endif %}
					{% if block.settings.cta_url != blank or block.settings.cta_caption != blank %}
						<a class="cta button-with-url button button--primary button--md button--blur button--fixed" href="{{ block.settings.cta_url }}" is="hover-link">
							<span class="btn-fill" data-fill=""></span>
							<span class="btn-text">{{ block.settings.cta_caption }}</span>
						</a>
					{% endif %}
				</div>
			</li>
		{% endfor %}
	</menu>
	<div class="carousel-nav-wrapper">
		<div class="progress-bar"><div class="progress"></div></div>
		<menu class="carousel carousel-nav">
			{% for block in section.blocks %}
				<li class="tab tab-{{ forloop.index }} carousel-cell" data-index="{{ forloop.index0 }}">
					<span>{{ block.settings.tab_name }}</span>
				</li>
			{% endfor %}
		</menu>
	</div>
</article>

<script>
	$(document).ready(function() { 
		var sectionId = '{{ section.id }}'; 
		var $carousel = $('#shopify-section-{{ section.id }} .carousel-main'); 
		var autoplaySpeed = {{ section.settings.autoplay_ms }}; 
		var sliderSpeed = 300;

		const tabs = document.querySelectorAll('#shopify-section-{{ section.id }} .carousel-nav .tab'); 
		
		console.log("-------------------------------"); 

		document.documentElement.style.setProperty('--progress-duration', (autoplaySpeed / 1000) + 's'); 
		document.documentElement.style.setProperty('--slider-speed', (sliderSpeed / 1000) + 's'); 

		/* Init slick slider */
		$carousel.slick({ 
			arrows: true, 
			dots: false, 
			infinite: true, 
			slidesToShow: 1, 
			slidesToScroll: 1, 
			speed: sliderSpeed, 
			autoplay: {{ section.settings.autoplay }}, 
			autoplaySpeed: autoplaySpeed, 
			pauseOnHover: false, 
			pauseOnFocus: false, 
			responsive: [ 
				{ breakpoint: 767, settings: { dots: true } }, 
			]
		}); 

		/* Tab click events */
		tabs.forEach((tab, i) => { 
			tab.addEventListener("click", (e) => { 
				console.log("tab.dataset.index: " + tab.dataset.index); 
				$carousel.slick('slickGoTo', tab.dataset.index); 
			}); 
		}); 

		/* Disable Slick hover autoplay stop feature */
		$carousel.mouseover(function() { 
			$(this).slick('play'); 
		}); 

		/* Update tabs visiblity and order */
		function updateTabVisibility(currentSlide) { 
			tabs.forEach((tab, i) => { 
				tab.classList.remove('active'); 
				tab.classList.remove('show'); 
				tab.style.order = 'unset'; 
			}); 
			
			if(tabs[currentSlide - 1]) { 
				tabs[currentSlide - 1].classList.add('show'); 
				tabs[currentSlide - 1].style.order = '0'; 
			} else { 
				tabs[tabs.length - 1].classList.add('show'); 
				tabs[tabs.length - 1].style.order = '0'; 
			}
			
			tabs[currentSlide].classList.add('active'); 
