<style>
	#shopify-section-{{ section.id }} { 
		
	}

	#shopify-section-{{ section.id }} .slideshow-container { 
		position: relative; 
		overflow: hidden; 
	}

	#shopify-section-{{ section.id }} .slideshow-container .carousel-main { 
		height: calc(100vh - 120px); 
		margin: 0; 
		padding: 0; 
		list-style: none; 
		opacity: 0; 
		/* aspect-ratio: 1344 / 500; */
		/* aspect-ratio: 1920 / 924; */
		transform: translateY(1px); 
		transition: opacity .3s; 
		cursor: grab; 
	}

	#shopify-section-{{ section.id }} .slideshow-container .carousel-main.slick-initialized { 
		opacity: 1; 
	}

	#shopify-section-{{ section.id }} .carousel-main .carousel-cell { 
		width: 100%; 
		/* height: auto; */
		height: calc(100vh - 120px); 
		position: relative; 
		/* aspect-ratio: 1344 / 500; */
		/* aspect-ratio: 1920 / 924; */
		background-size: cover; 
		background-position: center; 
	}

	#shopify-section-{{ section.id }} .carousel-main .carousel-cell .media { 
		width: 100%; 
		height: 100%; 
		object-fit: cover; 
		object-position: center; 
	}

	#shopify-section-{{ section.id }} .carousel-main .carousel-cell .media.mobile { 
		display: none; 
	}

	#shopify-section-{{ section.id }} .carousel-cell .banner-inner { 
		top: 50%; 
		left: 50%; 
		width: 100%; 
		max-width: 1440px; 
		display: flex; 
		flex-direction: column; 
		position: absolute; 
		margin: 0 auto; 
		padding: 0 20px calc(60vw / 19.2) 20px; 
		z-index: 2; 
		transform: translate(-50%, -50%); 
	}

	#shopify-section-{{ section.id }} .carousel-cell .banner-inner * { 
		/* max-width: calc(750vw / 19.2); */
		max-width: 740px; 
	}

	#shopify-section-{{ section.id }} .carousel-cell .banner-subheading { 
		/* margin-bottom: calc(20vw / 19.2); */
		margin-bottom: 17px; 
		line-height: 100%; 
		font-weight: 400; 
	}

	#shopify-section-{{ section.id }} .carousel-cell .banner-heading { 
		/* margin-bottom: calc(60vw / 19.2); */
		margin-bottom: 60px; 
		/* line-height: 150%; */
		line-height: 68px; 
	}

	#shopify-section-{{ section.id }} .carousel-cell .banner-desc *:last-child { 
		margin-bottom: 0; 
	}

	#shopify-section-{{ section.id }} .carousel-cell .cta { 
		padding: 26px 48px; 
	}

	#shopify-section-{{ section.id }} .carousel-cell .cta .btn-fill { 
		max-width: unset; 
	}

	#shopify-section-{{ section.id }} .carousel-cell .cta .btn-text { 
		font-size: 20px; 
		font-weight: 600; 
	}

	#shopify-section-{{ section.id }} .carousel-nav-wrapper { 
		bottom: 0; 
		left: 50%; 
		width: 100%; 
		max-width: 1440px; 
		height: fit-content; 
		position: absolute; 
		display: flex; 
		align-items: center; 
		margin: 0 auto; 
		padding: 0 20px calc(26vw / 19.2) 20px; 
		transform: translateX(-50%); 
		z-index: 1; 
		pointer-events: auto; 
	}

	#shopify-section-{{ section.id }} .carousel-nav { 
		bottom: 0; 
		width: fit-content; 
		height: fit-content; 
		display: flex; 
		flex-direction: column; 
		align-items: flex-start; 
		background-color: var(--primary-color); 
		margin: 0 0 0 calc(30vw / 19.2); 
		padding: 0; 
		list-style: none; 
		pointer-events: auto; 
	}

	#shopify-section-{{ section.id }} .carousel-nav .tab { 
		display: none; 
		flex: 1; 
		color: #999999; 
		font-size: .75rem; 
		padding: 8px 0; 
		text-align: left; 
		cursor: pointer; 
		pointer-events: auto; 
		transition: opacity .3s; 
	}

	#shopify-section-{{ section.id }} .carousel-nav .tab span { 
		position: relative; 
	}

	#shopify-section-{{ section.id }} .carousel-nav .tab span:after { 
		content: ''; 
		bottom: 0; 
		right: 0;  
		width: 0; 
		height: 1px; 
		position: absolute; 
		background-color: var(--neutral-white); 
		transition: width .3s; 
	}

	#shopify-section-{{ section.id }} .carousel-nav .tab:hover span:after { 
		width: 100%; 
		left: 0; 
		right: unset; 
	}

	#shopify-section-{{ section.id }} .carousel-nav .tab.active { 
		display: block; 
		color: var(--color-white); 
		/* pointer-events: none; */
		pointer-events: all; 
		z-index: 1; 
	}

	#shopify-section-{{ section.id }} .carousel-nav .tab.active span:after { 
		display: none; 
	}

	#shopify-section-{{ section.id }} .carousel-nav .tab.show { 
		display: block; 
		pointer-events: all; 
	}

	#shopify-section-{{ section.id }} .flickity-slider { 
		display: flex; 
	}

	#shopify-section-{{ section.id }} .progress-bar { 
		width: 2px; 
		height: 12px; 
		position: relative; 
		display: flex; 
		background-color: rgba(255, 255, 255, 0.2); 
		border-radius: 20px; 
		overflow: hidden; 
	}

	#shopify-section-{{ section.id }} .progress-bar .progress { 
		position: absolute; 
		display: block; 
		width: 100%; 
		height: 0; 
		background-color: var(--color-white); 
		animation: progressAnim var(--progress-duration) linear 0s infinite; 
	}

	#shopify-section-{{ section.id }} .button-with-url { 
		/* font-size: 20px; */
	}

	#shopify-section-{{ section.id }}  .slick-prev, 
	#shopify-section-{{ section.id }}  .slick-next { 
		width: 40px; 
		height: 40px; 
		display: flex; 
		font-size: 0; 
		opacity: 0; 
		z-index: 2; 
		transition: all .3s; 
	}

	#shopify-section-{{ section.id }}:hover .slick-prev, 
	#shopify-section-{{ section.id }}:hover .slick-next { 
		opacity: 1; 
	}

	#shopify-section-{{ section.id }}  .slick-prev:before, 
	#shopify-section-{{ section.id }}  .slick-next:before { 
		content: ''; 
		width: 100%; 
		height: 100%; 
		display: block; 
		background-image: url({{ 'cg_slideshow-arrow-right.svg' | asset_url }}); 
		background-size: contain; 
		background-position: center; 
		background-repeat: no-repeat; 
	}

	#shopify-section-{{ section.id }} .slick-prev { 
		left: -100%; 
		transform: rotate(180deg); 
	}

	#shopify-section-{{ section.id }}:hover .slick-prev { 
		left: 0; 
	}

	#shopify-section-{{ section.id }}:hover .slick-next { 
		right: -100%; 
	}

	#shopify-section-{{ section.id }}:hover .slick-next { 
		right: 0; 
	}

	/* Animation */
	@keyframes progressAnim { 
		0% { 
			height: 0; 
		}
		100% { 
			height: 100%; 
		}
	}

	@keyframes progressAnimMobile { 
		0% { 
			width: 0; 
		}
		100% { 
			width: 100%; 
		}
	}

