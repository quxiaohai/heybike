    gap: 12px;
    justify-content: {% if block.settings.desktop_text_align == 'left' %}flex-start{% elsif block.settings.desktop_text_align == 'center' %}center{% else %}flex-end{% endif %};
    font-size: {{ block.settings.desktop_countdown_size }}px;
    color: {{ block.settings.countdown_text_color }};
  }

