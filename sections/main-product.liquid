{% comment %}
  Adjusted by CLEARgo
{% endcomment %}

{% style %}
  html:has(#shopify-section-{{ section.id }}) { 
    scroll-behavior: smooth;
  }
  
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (min-width: 1024px) {
    #shopify-section-{{ section.id }} {
      {%- assign media_ratio = section.settings.media_size | divided_by: 50.0 -%}
      --product-grid: auto / minmax(0, {{ media_ratio }}fr) minmax(0, {{ 2.0 | minus: media_ratio }}fr);
    }
  }

  {%- assign first_media = product.selected_or_first_available_variant.featured_media | default: product.media.first -%}
  @media screen and (max-width: 767px) {
    #shopify-section-{{ section.id }} {
      --aspect-ratio: {{ first_media.aspect_ratio }};
    }
  }

  @media screen and (min-width: 768px) {
    #shopify-section-{{ section.id }} {
      --aspect-ratio: {{ first_media.aspect_ratio }};
    }
  }

  /* Custom */
  .page-container:has(.product-details-wrapper) { 
    margin-top: 56px; 
  }

  #shopify-section-{{ section.id }} .product__gallery-container {
    width: calc((728vw / 19.2) + 112px); 
  }
  
  #shopify-section-{{ section.id }} .product-media-info {
    width: calc(728vw / 19.2); 
  }

  #shopify-section-{{ section.id }} .product__info { 
    width: calc(100% - ((728vw / 19.2) + 112px)); 
  }

  #shopify-section-{{ section.id }} .product-info-header {
    display: flex; 
    gap: calc(12vw / 19.2); 
    justify-content: space-between; 
    margin-inline: 9px 34px; 
  }

  #shopify-section-{{ section.id }} .heading { 
    margin-bottom: 12px; 
    /* font-size: 3rem; */
    font-size: 1.5rem; 
  }

  #shopify-section-{{ section.id }} .product__desc * { 
    line-height: normal;
    /* font-size: calc(24vw / 19.2); */
    color: var(--color-grey-2); 
  }

  #shopify-section-{{ section.id }} .price {
    flex-direction: row; 
    flex-wrap: wrap; 
  }
  
  #shopify-section-{{ section.id }} .price__regular { 
    /* font-size: 3rem; */
    font-size: 2rem; 
  }

  #shopify-section-{{ section.id }} .product__price { 
    height: 58px; 
  }

  #shopify-section-{{ section.id }} .product__price:is(.price__sale,.unit-price) { 
    font-size: 1.5rem; 
  }

  #shopify-section-{{ section.id }} .product-details-wrapper { 
    border-radius: 20px; 
    /* margin-top: 36px; */
    margin-top: 45px; 
    padding: calc(28vw / 19.2) calc(38vw / 19.2); 

    {% if section.settings.bg_color != blank %}
      background-color: {{ section.settings.bg_color }}; 
    {% endif %}
  }

  #shopify-section-{{ section.id }} .product__rating { 
    margin-bottom: 10px; 
  }

  #shopify-section-{{ section.id }} .product__rating .rating-star::before {
    font-size: 24px; 
  }

  #shopify-section-{{ section.id }} .product__rating .rating-count { 
    color: var(--color-black); 
    font-size: 20px; 
  }

  #shopify-section-{{ section.id }} .product-countdown { 
    display: flex; 
    /* flex-wrap: wrap; */
    margin-bottom: 36px; 
  }

  #shopify-section-{{ section.id }} .product-countdown .heading, 
  #shopify-section-{{ section.id }} .product-countdown .tracking-widest { 
    font-size: calc(24vw / 19.2); 
    font-weight: 600; 
    letter-spacing: unset; 
    color: var(--color-secondary); 
  }

  #shopify-section-{{ section.id }} .product-countdown .countdown__timer { 
    max-width: 100%; 
    align-items: center; 
    /* margin: 0 auto; */
    color: var(--color-secondary); 
  }

  #shopify-section-{{ section.id }} .product-countdown .countdown__item {
    width: calc(80vw / 19.2); 
    aspect-ratio: 1; 
    padding: 0; 
  }

  #shopify-section-{{ section.id }} .product-countdown .countdown__timer .countdown__item p { 
    margin-bottom: 0; 
    line-height: normal; 
    font-size: calc(40vw / 19.2); 
    font-weight: 600; 
  }

  #shopify-section-{{ section.id }} .product-countdown .countdown__timer .countdown__item span { 
    color: var(--color-grey); 
    font-size: calc(14vw / 19.2); 
  }

  #shopify-section-{{ section.id }} .condition-compare-row { 
    display: flex; 
    justify-content: space-between; 
    gap: calc(20vw / 19.2); 
    margin-bottom: 40px; 
  }

  #shopify-section-{{ section.id }} .condition-wrapper { 
    position: relative; 
    margin-left: calc(40vw / 19.2); 
  } 

  #shopify-section-{{ section.id }} .condition { 
    width: calc(302vw / 19.2); 
    max-width: 302px; 
    position: relative; 
    display: flex; 
    align-items: center; 
    gap: calc(8vw / 19.2); 
    line-height: normal; 
    font-size: calc(20vw / 19.2); 
    padding: calc(20vw / 19.2) calc(12vw / 19.2) calc(20vw / 19.2) 0; 
    border-radius: 4px; 
    z-index: 1; 
  }

  #shopify-section-{{ section.id }} .condition.mobile {
    display: none; 
  }

  #shopify-section-{{ section.id }} .condition-wrapper:before { 
    content: ''; 
    top: 50%; 
    left: calc(-32vw / 19.2); 
    width: calc(64vw / 19.2); 
    height: calc(64vw / 19.2); 
    position: absolute; 
    display: block; 
    border-radius: 8px; 
    transform: translateY(-50%) rotate(45deg) skew(5deg); 
    z-index: 0; 
  }

  #shopify-section-{{ section.id }} .condition-icon { 
    width: calc(50vw / 19.2); 
    z-index: 2; 
  }

  #shopify-section-{{ section.id }} .compare { 
    display: flex; 
    align-items: center; 
    padding: calc(12vw / 19.2) calc(30vw / 19.2); 
    border: 1px solid var(--color-black); 
    border-radius: 6px; 
    line-height: normal; 
    font-size: calc(20vw / 19.2); 
    text-align: center; 
  }

  #shopify-section-{{ section.id }} fieldset:not([data-option-slug="color"]) { 
    gap: 20px; 
  }

  #shopify-section-{{ section.id }} .variant-picker fieldset[data-option-slug="color"] { 
    justify-content: space-between; 
  }

  #shopify-section-{{ section.id }} .variant-picker fieldset[data-option-slug="colors"] { 
    justify-content: space-between; 
  }

  #shopify-section-{{ section.id }} klarna-placement { 
    {% if section.settings.hide_klarna == true %}
      display: none; 
    {% endif %}
  }

  #shopify-section-{{ section.id }} .product-form__input .form__label { 
    font-size: 1.5rem; 
    font-weight: 700; 
  }

  #shopify-section-{{ section.id }} .product-form__input .form__label * { 
    display: flex; 
    align-items: center; 
  }

  #shopify-section-{{ section.id }} fieldset:not([data-option-slug="color"]) .form__label { 
    width: fit-content; 
  }

  #shopify-section-{{ section.id }} fieldset:not([data-option-slug="color"]) .label-swatch { 
    font-size: 1rem; 
  }

  #shopify-section-{{ section.id }} fieldset:not([data-option-slug="color"]) .label-swatch {
    padding: 12px 20px; 
  }

  #shopify-section-{{ section.id }} .product-text-list { 
    display: flex; 
    flex-wrap: wrap; 
    gap: 20px; 
    margin-top: 36px; 
  }

  #shopify-section-{{ section.id }} .product__text { 
    width: calc((100% - 40px) / 3); 
  }

  #shopify-section-{{ section.id }} .product-text-wrapper { 
    display: flex; 
    flex-direction: column; 
  }

  #shopify-section-{{ section.id }} .product__text img { 
    width: 28px; 
    height: 28px; 
    aspect-ratio: 1; 
    object-fit: contain; 
  }

  #shopify-section-{{ section.id }} .product-text-heading { 
    font-size: 1rem; 
    margin-bottom: 12px; 
  }

  #shopify-section-{{ section.id }} .payment-icons { 
    margin-top: 48px; 
  }

  #shopify-section-{{ section.id }} input[type=checkbox]:not(.switch) { 
    border: 2px solid var(--color-secondary); 
    border-radius: 3px; 
    background-color: transparent; 
  }

  #shopify-section-{{ section.id }} input[type=checkbox]:not(.switch):checked { 
    background-color: var(--color-secondary) !important; 
  }

  #shopify-section-{{ section.id }} input[type=checkbox]:not(.switch)::after { 
    width: 100%; 
    height: 100%; 
    border-radius: 0; 
    background-color: transparent; 
    background-image: url({{ 'cg_checkbox-tick.svg' | asset_url }}); 
    background-size: cover; 
  }

  #shopify-section-{{ section.id }} .product-form__submit { 
    height: fit-content; 
    max-height: unset; 
    border-radius: 20px; 
    font-size: calc(30vw / 19.2); 
    font-weight: 500; 
    text-transform: uppercase; 
  }

  #shopify-section-{{ section.id }} .price { 
    align-items: center; 
  }

  #shopify-section-{{ section.id }} .product__accordion .price { 
    /* align-items: flex-start; */
    align-items: center; 
  }

  #shopify-section-{{ section.id }} .product__accordion .unit-price, 
  #shopify-section-{{ section.id }} .product__accordion .price__sale { 
    font-size: .625rem; 
  }

  #shopify-section-{{ section.id }} .product-media-introduce {
    display: flex; 
    flex-wrap: wrap; 
    row-gap: calc(28vw / 19.2); 
    padding: calc(32vw / 19.2) calc(54vw / 19.2); 
  }

  #shopify-section-{{ section.id }} .product-media-introduce.mobile { 
    display: none; 
  }

  #shopify-section-{{ section.id }} .product-media-introduce li {
    width: calc(100% / 3); 
    display: flex; 
    align-items: flex-start; 
  }

  #shopify-section-{{ section.id }} .product-media-introduce li img {
    margin-right: calc(24vw / 19.2); 
  }

  #shopify-section-{{ section.id }} .product-media-introduce .introduce-info_title {
    font-size: 1.25rem; 
    font-weight: 500; 
  }

  #shopify-section-{{ section.id }} .product-media-introduce .introduce-info_remark {
    font-size: 1rem; 
    color: var(--color-grey);  
  }

  #shopify-section-{{ section.id }} .page-nav { 
    width: 70%; 
    display: flex; 
  }

  #shopify-section-{{ section.id }} .tab-list {
    display: flex; 
    align-items: center; 
    flex-wrap: wrap; 
    margin: auto 0; 
    padding: 0; 
    list-style: none; 
  }

  #shopify-section-{{ section.id }} .tab-item { 
    position: relative; 
    display: block;
    padding: 12px 20px; 
    white-space: nowrap; 
  }

  #shopify-section-{{ section.id }} .tab-item.active {
    font-weight: 700; 
  }

  #shopify-section-{{ section.id }} .tab-item.active:after { 
    width: 100%; 
  }

  #shopify-section-{{ section.id }} .tab-item:hover {
    font-weight: 700; 
  }

  #shopify-section-{{ section.id }} .tab-item:after { 
    content: ''; 
    bottom: 0; 
    right: 0; 
    width: 0; 
    height: 2px; 
    position: absolute; 
    display: block; 
    background-color: var(--color-lemon-yellow); 
    transition: all .3s; 
  }

  #shopify-section-{{ section.id }} .tab-item:hover:after { 
    left: 0; 
    right: unset; 
    width: 100%; 
  }

  #shopify-section-{{ section.id }} .sticky-form { 
    width: 100vw; 
    display: none; 
    background-color: #FFFFFF; 
    box-shadow: 6px 0px 6px 0px #00000040;
    z-index: 24; 
  }

  #shopify-section-{{ section.id }} sticky-variant-media img { 
    width: 80px; 
    height: auto; 
  }

  #shopify-section-{{ section.id }} .sticky-form .sticky-buy-button { 
    display: flex; 
    justify-content: space-between; 
    padding: 14px 20px; 
  }

  #shopify-section-{{ section.id }} .sticky-form [type="submit"] {
    padding: 16px 20px; 
    white-space: nowrap; 
  }

  #shopify-section-{{ section.id }} .sticky-form .sticky-buy-button__variant {
    display: flex; 
  }

  #shopify-section-{{ section.id }} .sticky-form .product-info-row {
    display: flex; 
  }

  #shopify-section-{{ section.id }} .sticky-form .product-title { 
    display: flex; 
    align-items: center; 
    font-size: 1rem; 
    font-weight: bold; 
  }

  #shopify-section-{{ section.id }} .sticky-form .price {
    display: none; 
  }

  #StickyPrice-{{ section.id }} .price__sale {
    display: none; 
  }

  #StickyPrice-{{ section.id }} .price__regular {
    font-size: 36px; 
  }

  #shopify-section-{{ section.id }} .indicators .button {
    /* border: none; */
  }

  [data-button-hover=standard] .button:not([disabled]):hover .btn-text { 
    color: var(--color-white); 
  }

  #shopify-section-{{ section.id }} .product--thumbnail .product__media-container .indicators .button { 
    border: none; 
  }

  /* Quickview */
  #shopify-section-{{ section.id }} .quickview-btn-wrapper { 
    display: block; 
  }

  #shopify-section-{{ section.id }} .quickview-btn-wrapper .quick-view__button { 
    width: fit-content; 
    position: static; 
    border: none; 
    border-radius: 20px !important; 
    padding: 16px 20px; 
    background-color: var(--color-lemon-yellow); 
  }

  #shopify-section-{{ section.id }} .quickview-btn-wrapper .quick-view__button .btn-text { 
    white-space: nowrap; 
  }

  /* Quickview modal */
  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} .quick-view .product__info { 
    padding-block: 0; 
    padding-inline: 0; 
  }
  
  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} .product__info>*+* { 
    margin-block-start: 0; 
  }

  .quick-view .product__media>img { 
    width: 100%; 
    height: fit-content; 
    aspect-ratio: 5 / 4; 
    object-fit: contain; 
  }
  
  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} .product__vendor { 
    display: none; 
  }

  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} .product__title { 
    margin-top: 0; 
  }

  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} .product__title .heading { 
    margin-bottom: .5rem; 
    font-size: 20px !important; 
  }

  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} .product__text { 
    margin-bottom: 2rem; 
    font-size: 12px; 
    color: var(--color-grey-2); 
  }

  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} .price { 
    display: flex; 
    flex-direction: row; 
    align-items: center; 
    margin-bottom: 24px; 
  }

  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} .product__price .price__regular { 
    /* font-size: 20px; */
    font-size: 2rem; 
  }

  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} .product__price :is(.price__sale,.unit-price) { 
    /* font-size: 14px; */
    font-size: 1rem; 
  }

  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} .form__label .desktop { 
    font-size: 1.5rem; 
    font-weight: 600; 
  }

  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} .form__label .mobile { 
    display: none; 
  }

  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} .product-form-wrapper { 
    display: block; 
    margin-bottom: 1.5rem; 
  }

  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} input:is([type=checkbox], [type=radio]):checked:after { 
    width: 100%; 
    height: 100%; 
    border-radius: 0; 
    background-color: transparent; 
    background-image: url({{ 'cg_checkbox-tick.svg' | asset_url }}); 
    background-size: cover; 
  }

  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} .details__footer { 
    display: none; 
  }

  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} .drawer__inner>:is(.drawer__content, .drawer__header) { 
    background-color: unset; 
  }

  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} .product-countdown, 
  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} .product-countdown * { 
    color: var(--color-secondary); 
    font-weight: 600; 
  }

  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} .countdown__item span { 
    color: var(--color-grey); 
  }

  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} #shopify-block-countdown { 
    display: flex; 
    flex-direction: column; 
  }
  
  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} #shopify-block-countdown * { 
    margin: 0 auto; 
  }

  #Quickview-{{ section_id }}-{{ block_id }}-{{ product.id }} .product__media { 
    width: 100%; 
    height: auto; 
    aspect-ratio: 5 / 4; 
  }

  /* Responsive */
