  }

  .ai-hero-banner-countdown-unit-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }

  .ai-hero-banner-countdown-value-{{ ai_gen_id }} {
