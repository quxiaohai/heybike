<script>
  (function() {
    class HeroBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.countdownDate = '{{ block.settings.countdown_date }}';
        this.countdownTime = '{{ block.settings.countdown_time }}';
      }

      connectedCallback() {
        if (this.countdownDate && this.countdownTime) {
          this.initCountdown();
        }
      }

      initCountdown() {
        const targetDateTime = new Date(`${this.countdownDate}T${this.countdownTime}`).getTime();
        
        const updateCountdown = () => {
          const now = new Date().getTime();
          const distance = targetDateTime - now;

          if (distance < 0) {
            this.querySelector('[data-countdown-days]').textContent = '00';
            this.querySelector('[data-countdown-hours]').textContent = '00';
            this.querySelector('[data-countdown-minutes]').textContent = '00';
            this.querySelector('[data-countdown-seconds]').textContent = '00';
            return;
          }

          const days = Math.floor(distance / (1000 * 60 * 60 * 24));
          const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
          const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
          const seconds = Math.floor((distance % (1000 * 60)) / 1000);

          this.querySelector('[data-countdown-days]').textContent = String(days).padStart(2, '0');
          this.querySelector('[data-countdown-hours]').textContent = String(hours).padStart(2, '0');
          this.querySelector('[data-countdown-minutes]').textContent = String(minutes).padStart(2, '0');
          this.querySelector('[data-countdown-seconds]').textContent = String(seconds).padStart(2, '0');
        };

        updateCountdown();
        setInterval(updateCountdown, 1000);
      }
    }

    customElements.define('hero-banner-{{ ai_gen_id }}', HeroBanner{{ ai_gen_id }});
  })();
</script>

