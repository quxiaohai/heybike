<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- render 'section-variables', section: section -%}
    --section-blocks-count: {{ section.blocks.size }};
  }

  #shopify-section-{{ section.id }} .play-button{
    top: 50%;
    left: 50%;
    display: flex; 
    align-items: center; 
    transform: translate(-50%, -50%);
  }

  #shopify-section-{{ section.id }} .image-with-text__item { 
    /* 
      height: 100% !important; 
      min-height: 100% !important; 
    */ 
    max-height: unset; 
  }

  #shopify-section-{{ section.id }} .timeline__item>.flex { 
    gap: 0; 
  }

  #shopify-section-{{ section.id }} .image-with-text.with-background .image-with-text__item .rich-text { 
    padding-block: 0; 
    padding-inline: clamp(var(--sp-12), 6.737vw, var(--sp-12)); 
  }

  #shopify-section-{{ section.id }} .image-with-text .rich-text>*+*:not(.spacing-section) { 
    margin-block-start: unset; 
  }

  #shopify-section-{{ section.id }} .image-with-text__image.media--adapt { 
    /* padding-block-end: 100%; */
  }

  #shopify-section-{{ section.id }} .image-with-text__image.media--adapt>.media { 
    position: static;
    height: 100%;
  }

  #shopify-section-{{ section.id }} .image-with-text__media { 
    height: 100%; 
  }

  #shopify-section-{{ section.id }} .deferred-media { 
    width: 100%; 
    height: auto; 
    aspect-ratio: 16 / 9; 
    transform: unset !important; 
  }

  /* Reponsive */
  /* Mobile */
  @media (max-width: 768px) { 
    #shopify-section-{{ section.id }} .slider .timeline { 
      --slider-item-width: 100%; 
    }

    #shopify-section-{{ section.id }} .image-with-text.with-background .image-with-text__item .rich-text { 
      padding: 16px; 
    }
  }

  /* Tablet */
  @media (min-width: 769px) and (max-width: 1366px) { 
    #shopify-section-{{ section.id }} .slider .timeline { 
      --slider-item-width: 100%; 
    }
  }
</style>

<div class="section section--padding section-timeline video-with-text-slide {% if section.settings.divider %} section--divider{% endif %}{% if section.settings.rounded %} section--rounded relative{% endif %}">
  <div class="page-width{% if section.settings.full_width %} page-width--full{% endif %} relative overflow-hidden md:overflow-visible">
    {%- capture indicators -%}
      {%- if section.blocks.size > 1 -%}
        <div class="indicators hidden lg:flex gap-2d5">
          <button class="button button--secondary" type="button" is="previous-button" aria-controls="Slider-{{ section.id }}" aria-label="{{ 'general.pagination.previous' | t | escape }}" disabled>
            <span class="btn-fill" data-fill></span>
            <span class="btn-text">
              {%- render 'icon', icon: 'chevron-left', class: 'transform' -%}
            </span>
          </button>
          <button class="button button--secondary" type="button" is="next-button" aria-controls="Slider-{{ section.id }}" aria-label="{{ 'general.pagination.next' | t | escape }}">
            <span class="btn-fill" data-fill></span>
            <span class="btn-text">
              {%- render 'icon', icon: 'chevron-right', class: 'transform' -%}
            </span>
          </button>
        </div>
      {%- endif -%}
    {%- endcapture -%}
    {%- render 'section-heading', section: section, section_button: indicators -%}
    {%- if section.blocks.size > 0 -%}
      <slider-element id="Slider-{{ section.id }}" class="grid slider slider--desktop slider--tablet" selector=".card-grid>.card">
        <motion-list class="timeline card-grid grid{% if section.blocks.size == 1 %} with-only1{% endif %}">
          {%- for block in section.blocks -%}
            <div class="timeline__item card{% if forloop.first %} selected{% endif %}" {{ block.shopify_attributes }}>
              <div class="image-with-text with-background flex lg:gap-8 flex-col{% if section.settings.layout == 'video_first' %} lg:flex-row{% else %} lg:flex-row-reverse{% endif %} overflow-hidden">
                <div class="image-with-text__item {% comment %}grow shrink-0{% endcomment %}{% if section.settings.image_width == 'small' %} lg:grow-0{% endif %} relative">
                  <div class="image-with-text__media{% comment %} h-full{% endcomment %}">
                    <media-element class="image-with-text__image block media--{{ section.settings.image_height }} mobile:media--{{ section.settings.image_height_mobile }} relative overflow-hidden"
                      {%- if block.settings.enable_parallax %} data-parallax="0.3" data-parallax-dir="{{ block.settings.parallax_direction }}"{% endif -%}
                    >
                      <div class="media media--height block w-full h-full relative overflow-hidden">
                        {%- assign sizes = '(max-width: 767px) 100vw, 50vw' -%}
                        {%- if block.settings.video_mobile or block.settings.video_url_mobile -%}
                          {%- render 'video',
                            sizes: sizes,
                            video: block.settings.video_mobile,
                            video_url: block.settings.video_url_mobile,
                            muted: block.settings.enable_video_autoplay,
                            autoplay: block.settings.enable_video_autoplay,
                            loop: block.settings.enable_video_looping,
                            description: block.settings.description,
                            cover_image: block.settings.cover_image_mobile,
                            show_play_button: true,
                            use_popup: block.id,
                            controls: true,
                            is_mobile: true,
                            class: 'media media--height block w-full h-full relative overflow-hidden'
                          -%}
                        {%- endif -%}
          
                        {%- render 'video',
                          sizes: sizes,
                          video: block.settings.video,
                          video_url: block.settings.video_url,
                          muted: block.settings.enable_video_autoplay,
                          autoplay: block.settings.enable_video_autoplay,
                          loop: block.settings.enable_video_looping,
                          description: block.settings.description,
                          cover_image: block.settings.cover_image,
                          show_play_button: true,
                          use_popup: block.id,
                          controls: true,
                          class: 'media media--height block w-full h-full relative overflow-hidden'
                        -%}

                         <x-modal id="PopVideo-{{ block.id }}" class="video-modal x-modal drawer z-30 fixed bottom-0 left-0 h-full w-full pointer-events-none"
                              role="dialog"
                              aria-modal="true"
                              hidden
                            >
                            <overlay-element class="overlay fixed-modal invisible opacity-0 fixed bottom-0 left-0 w-full h-screen pointer-events-none" aria-controls="PopVideo-{{ block.id }}" aria-expanded="false"></overlay-element>
                            <div class="drawer__inner z-10 absolute top-0 flex flex-col w-full h-full overflow-hidden">
                              <button class="button button--secondary button--close drawer__close hidden sm:flex items-center justify-center" type="button" is="hover-button" aria-controls="PopVideo-{{ block.id }}" aria-expanded="false" aria-label="{{ 'general.accessibility.close' | t | escape }}">
                                <span class="btn-fill" data-fill></span>
                                <span class="btn-text">
                                  {%- render 'icon', icon: 'close', size: 'sm' -%}
                                </span>
                              </button>
                              <div class="video-drawer w-full h-full">
                              {%- render 'video',
                                sizes: '100vw',
                                video: block.settings.video,
                                video_url: block.settings.video_url,
                                muted: false,
                                autoplay: true,
                                loop: false,
                                show_play_button: false,
                                is_mobile: false,
                                controls: true,
                                class: 'relative'
                              -%}
                              </div>
                            </div>
                          </x-modal>
                      </div>
                    </media-element>
                  </div>
                </div>
          
                <div class="image-with-text__item grow shrink-0{% if section.settings.image_width == 'large' %} lg:grow-0{% endif %} align-self-center">
                  <div class="rich-text lg:text-{{ section.settings.text_alignment }} text-{{ section.settings.text_alignment_mobile }} relative z-1">
                    {%- if block.settings.image != blank -%}
                      <div {{ block.shopify_attributes }}>
                        <p class="media media--transparent relative inline-block">
                          {%- if block.settings.image_width == 'custom' -%}
                            {%- capture style -%}--image-max-width: {{ block.settings.image_max_width }}px; --image-max-width-mobile: {{ block.settings.image_max_width_mobile }}px{%- endcapture -%}
                            {%- capture sizes -%}(max-width: 767px) min({{ block.settings.image_max_width_mobile }}px, 100vw), min({{ block.settings.image_max_width }}px, 100vw){%- endcapture -%}
                            {%- capture widths -%}{{ block.settings.image_max_width_mobile }},{{ block.settings.image_max_width_mobile | times: 2 }},{{ block.settings.image_max_width }},{{ block.settings.image_max_width | times: 2 }}{%- endcapture -%}
                          {%- else -%}
                            {%- assign sizes = 'min(100vw, var(--page-width))' -%}
                            {%- assign widths = '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200' -%}
                          {%- endif -%}
                          {{- block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: 'lazy', sizes: sizes, widths: widths, style: style, is: 'lazy-image', class: 'image-fit inline-block' -}}
                        </p>
                      </div>
                    {%- endif -%}
                    {%- if block.settings.text_1 != blank -%}
                      <div class="rte leading-normal {{ block.settings.text_font_1 }} {{ block.settings.text_size_1 }}{% if block.settings.secondary_color_1 %} text-opacity{% endif %}"{% if block.settings.text_size_1 == 'subtext-custom' %} style="--subtext-size:{{ block.settings.text_max_size_1 }}px;"{% endif %} {{ block.shopify_attributes }}>
                        {%- render 'highlighted-text', content: block.settings.text_1, style: block.settings.highlighted_text_1, scribble: block.settings.text_highlighted_scribble_1 -%}
                      </div>
                    {%- endif -%}
                    {%- if block.settings.text_2 != blank -%}
                      <div class="rte leading-normal {{ block.settings.text_font_2 }} {{ block.settings.text_size_2 }}{% if block.settings.secondary_color_2 %} text-opacity{% endif %}"{% if block.settings.text_size_2 == 'subtext-custom' %} style="--subtext-size:{{ block.settings.text_max_size_2 }}px;"{% endif %} {{ block.shopify_attributes }}>
                        {%- render 'highlighted-text', content: block.settings.text_2, style: block.settings.highlighted_text_2, scribble: block.settings.text_highlighted_scribble_2 -%}
                      </div>
                    {%- endif -%}
                  </div>
                </div>
              </div>
            </div>
          {%- endfor -%}
        </motion-list>
      </slider-element>

      {%- if section.blocks.size > 1 -%}
        <div class="scroll-area">
          <slider-dots class="timeline-dots flex justify-center items-center gap-2d5" aria-controls="Slider-{{ section.id }}">
            {%- for block in section.blocks -%}
              <button type="button" class="text-lg text-left font-bold flex items-center gap-2d5" data-index="{{ forloop.index }}" aria-current="{% if forloop.first %}true{% else %}false{% endif %}">
                <span class="sr-only">{{ 'general.pagination.page' | t: number: forloop.index }}</span>
              </button>
            {%- endfor -%}
          </slider-dots>
        </div>
      {%- endif -%}
    {%- endif -%}
  </div>
</div>

