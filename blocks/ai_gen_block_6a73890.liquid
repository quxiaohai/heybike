    display: block;
    width: 100%;
    height: 100%;
  }

  .ai-hero-banner-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: block;
  }

  .ai-hero-banner-{{ ai_gen_id }}--adapt-desktop .ai-hero-banner-image-{{ ai_gen_id }} {
    object-fit: contain;
  }

  .ai-hero-banner-{{ ai_gen_id }}--custom-desktop .ai-hero-banner-image-{{ ai_gen_id }} {
    object-fit: cover;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-banner-{{ ai_gen_id }}--adapt-mobile .ai-hero-banner-image-{{ ai_gen_id }} {
      object-fit: contain;
