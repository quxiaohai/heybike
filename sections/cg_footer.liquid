{% style %}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- render 'section-variables', section: section -%}
  }

  .section-{{ section.id }} .footer { 
    grid-template-columns: unset; 
  }

  .section-{{ section.id }} .company-intro { 
    display: flex; 
    padding: 50px 0; 
  }

  .section-{{ section.id }} .company-intro > * { 
    width: 50%; 
  }

  .section-{{ section.id }} .footer__logo { 
    padding: 16px 0; 
  }

  .section-{{ section.id }} .community-wrapper { 
    display: flex; 
    gap: calc(60vw / 19.2); 
    flex-wrap: wrap; 
    justify-content: space-between; 
    align-items: center; 
  }

  .section-{{ section.id }} .community-list { 
    display: flex; 
    gap: calc(10vw / 19.2); 
    flex-wrap: wrap; 
  }

  .section-{{ section.id }} .community-heading { 
    height: fit-content; 
  }

  .section-{{ section.id }} .community:last-child .community-link { 
    width: fit-content; 
    height: fit-content; 
    position: relative;  
    display: flex; 
  }

  .section-{{ section.id }} .community:last-child .community-link:after { 
    content: ''; 
    top: 50%; 
    left: 50%; 
    width: 10px; 
    height: 10px; 
    aspect-ratio: 1; 
    position: absolute; 
    display: block; 
    background-image: url({{ 'cg_arrow-upright.svg' | asset_url }}); 
    background-size: contain; 
    background-repeat: no-repeat; 
    background-position: center; 
    transform: translate(-50%, -50%); 
  }

  .section-{{ section.id }} .community img { 
    width: 80px; 
    height: 80px; 
    aspect-ratio: 1; 
    position: relative; 
    border-radius: .375rem; 
    object-fit: cover; 
    object-position: center; 
  }

  .section-{{ section.id }} .footer__details { 
    display: flex; 
    gap: calc(136vw / 19.2); 
  }

  .section-{{ section.id }} .footer__newsletter { 
    width: 25%; 
  }

  .section-{{ section.id }} .newsletter-heading { 
    margin-bottom: 20px; 
  }

  .section-{{ section.id }} .newsletter-heading.mobile { 
    display: none; 
  }

  .section-{{ section.id }} .newsletter-form { 
    margin-bottom: 16px; 
  }

  .section-{{ section.id }} .newsletter-desc { 
    color: var(--color-grey); 
  }

  .section-{{ section.id }} .footer__blocks { 
    width: 75%; 
    display: flex; 
    justify-content: flex-end; 
  }
  
  {% comment %}
    .section-{{ section.id }} .footer__blocks .details { 
      padding: 0 calc(36vw / 19.2); 
    }
  
    .section-{{ section.id }} .footer__blocks .details:first-child { 
      padding-left: 0; 
    }
  
    .section-{{ section.id }} .footer__blocks .details:last-child { 
      padding-right: 0; 
    }
  {% endcomment %}

  .section-{{ section.id }} .footer__blocks summary * { 
    font-size: 1.375rem; 
  }

  .section-{{ section.id }} .details__content * { 
    color: var(--color-grey); 
    font-size: 1rem; 
  }

  .section-{{ section.id }} .footer__accordions {
    width: 100%; 
  }

  .section-{{ section.id }} li .reversed-link { 
    min-height: 22px; 
    position: relative; 
    display: block; 
    line-height: normal; 
  }

  .section-{{ section.id }} li .reversed-link:after { 
    content: ''; 
    right: 0; 
    bottom: 0; 
    width: 0; 
    height: 2px; 
    position: relative; 
    display: block; 
    background-color: var(--color-grey); 
    transition: all .3s; 
  }

  .section-{{ section.id }} li:hover .reversed-link:after { 
    left: 0; 
    right: unset; 
    width: 100%; 
    position: absolute; 
  }

  /* Responsive */
  /* Mobile */
  @media (max-width: 767px) { 
    .section-{{ section.id }} { 
      padding-top: 64px; 
      padding-bottom: unset; 
    }

    .section-{{ section.id }} .company-intro { 
      flex-direction: column; 
      justify-content: space-between; 
      padding: 0; 
    }

    .section-{{ section.id }} .company-intro > * { 
      width: 100%; 
    }

    .section-{{ section.id }} .footer__logo { 
      display: none; 
    }

    .section-{{ section.id }} .community-heading { 
      font-size: 24px; 
    }
    
    .section-{{ section.id }} .community-list { 
      gap: 10px; 
    }

    .section-{{ section.id }} .community-wrapper { 
      gap: 24px; 
      margin-bottom: 32px; 
    }

    .section-{{ section.id }} .community { 
      width: calc((100% - 30px) / 4); 
    }

    .section-{{ section.id }} .community img { 
      width: 100%; 
    }

    .section-{{ section.id }} .footer__details { 
      flex-direction: column; 
    }

    .section-{{ section.id }} .footer__newsletter { 
      width: 100%; 
      margin-bottom: 44px; 
    }

    .section-{{ section.id }} .newsletter-heading { 
      display: none; 
    }

    .section-{{ section.id }} .newsletter-heading.mobile { 
      display: block; 
    }

    .section-{{ section.id }} .footer__blocks .details { 
      padding: 0; 
    }

    .section-{{ section.id }} .footer__blocks { 
      width: 100%; 
    }

    .section-{{ section.id }} .footer__blocks summary * { 
      font-size: 16px; 
    }

    .section-{{ section.id }} .footer__blocks details summary svg { 
      width: 12px; 
      height: 12px; 
      aspect-ratio: 1; 
    }

    .section-{{ section.id }} .footer__blocks details summary svg.minus { 
      display: none; 
    }

    .section-{{ section.id }} .footer__blocks details[aria-expanded="true"] summary svg.plus { 
      display: none; 
    }

    .section-{{ section.id }} .footer__blocks details[aria-expanded="true"] summary svg.minus { 
      display: block; 
    }
  }

  /* Tablet */
  @media (min-width: 768px) and (max-width: 1366px) { 
    .section-{{ section.id }} .company-intro { 
      justify-content: space-between; 
    }

    .section-{{ section.id }} .company-intro > * { 
      width: fit-content; 
    }
  
    .section-{{ section.id }} .community-list { 
      gap: calc(10vw / 13.66); 
    }

    .section-{{ section.id }} .community-wrapper { 
      gap: calc(60vw / 13.66); 
      justify-content: flex-end; 
    }

    .section-{{ section.id }} .footer__details { 
      flex-direction: column; 
    }

    .section-{{ section.id }} .footer__newsletter { 
      width: 100%; 
      margin-bottom: 48px; 
    }

    .section-{{ section.id }} .footer__blocks { 
      width: 100%; 
      justify-content: center; 
    }

    .section-{{ section.id }} .footer__accordions { 
      width: 100%; 
      justify-content: space-between; 
    }

    .section-{{ section.id }} .footer__blocks .details { 
      padding: 0; 
    }

    .section-{{ section.id }} .footer__details { 
      gap: calc(136vw / 13.66); 
    }
  }

  /* Desktop */
  @media (min-width: 1920px) { 
    .section-{{ section.id }} .community-list { 
      gap: 10px; 
    }

    .section-{{ section.id }} .community-wrapper { 
      gap: 60px; 
    }
    
    {% comment %}
    .section-{{ section.id }} .footer__blocks .details { 
      padding: 0 36px; 
    }
    {% endcomment %}

    .section-{{ section.id }} .footer__details { 
      gap: 136px; 
    }
  }
{% endstyle %}


{%- liquid
  assign enable_footer_info = false
  if section.settings.enable_newsletter or section.settings.show_social or shop.features.follow_on_shop? and section.settings.enable_follow_on_shop
    assign enable_footer_info = true
  endif
-%}

<div class="section-{{ section.id }} section section--padding{% if section.settings.divider %} section--divider{% endif %}{% if section.settings.rounded %} section--rounded{% endif %}"{% if section.settings.enable_parallax %} is="footer-parallax"{% endif %}>
  <footer class="footer{% if enable_footer_info %}{% if section.settings.invert_newsletter_others %} footer--inverted{% endif %}{% else %} footer--no-info{% endif %} page-width{% if section.settings.full_width %} page-width--full{% endif %} relative grid">
    <div class="company-intro">
      {%- liquid
        assign block = section.blocks | where: "type", "logo_social" | first
        if block
          render 'footer-logo', block: block
        endif
      -%}
      <div class="community-wrapper">
        {% if section.settings.community_heading != blank %}
          <h2 class="h5 community-heading">{{ section.settings.community_heading }}</h2>
        {% endif %}
        <ul class="community-list">
          {% for block in section.blocks %}
            {% if block.type == 'community' %}
              <li class="community">
                <a class="community-link" href="{{ block.settings.community_url }}">
                  {% if block.settings.community_image != blank %}
                    <img width="80" height="80" src="{{ block.settings.community_image | image_url: width: 80 }}" alt="{{ block.settings.community_alt }}" />
                  {% endif %}
                </a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>

    {%- if section.blocks.size > 0 or section.settings.enable_newsletter or section.settings.show_social or shop.features.follow_on_shop? and section.settings.enable_follow_on_shop -%}
      <div class="footer__details">
        {%- if section.settings.enable_newsletter -%}
          <div class="footer__newsletter">
            {%- if section.settings.newsletter_logo -%}
              <p class="footer__logo leading-none">
                <a href="{{ routes.root_url }}">
                  <span class="sr-only">{{ shop.name }}</span>
                  {%- capture sizes -%}{{ section.settings.newsletter_logo_height | times: section.settings.newsletter_logo.aspect_ratio }}px{%- endcapture -%}
                  {%- capture widths -%}{{ section.settings.newsletter_logo_height | times: section.settings.newsletter_logo.aspect_ratio }}, {{ section.settings.newsletter_logo_height | times: section.settings.newsletter_logo.aspect_ratio | times: 2 | at_most: section.settings.newsletter_logo.width }}{%- endcapture -%}
                  {%- capture style -%}--image-width: {{ section.settings.newsletter_logo_height | times: section.settings.newsletter_logo.aspect_ratio }}px; --image-height: {{ section.settings.newsletter_logo_height }}px;{%- endcapture -%}
                  {{- section.settings.newsletter_logo | image_url: width: section.settings.newsletter_logo.width | image_tag: loading: 'lazy', widths: widths, sizes: sizes, style: style, preload: true, is: 'lazy-image' -}}
                </a>
              </p>
            {%- endif -%}

            {% if section.settings.newsletter_heading != blank %}
              <h3 class="newsletter-heading text-xl {{ section.settings.newsletter_heading_size }} leading-none tracking-none font-medium lg:font-heading">
                {{ section.settings.newsletter_heading | escape }}
              </h3>
            {% endif %}
            {% if section.settings.newsletter_heading_mobile != blank %}
              <h3 class="newsletter-heading text-xl {{ section.settings.newsletter_heading_size }} leading-none tracking-none font-medium lg:font-heading mobile">
                {{ section.settings.newsletter_heading_mobile | escape }}
              </h3>
            {% endif %}
            {%- render 'newsletter-form', section_id: section.id, context: 'footer' -%}

            {%- if section.settings.newsletter_text != blank -%}
              <div class="newsletter-desc rte text-sm leading-tight">{{ section.settings.newsletter_text }}</div>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- if section.blocks.size > 0 -%}
          <div class="footer__blocks flex flex-col md:flex-row gap-10">
            <div class="footer__accordions flex flex-col md:flex-row">
              {%- liquid
                for block in section.blocks
                  case block.type
                    when 'link_list'
                      render 'footer-menu', block: block

                    when 'text'footer__accordions flex flex-wrap flex-col md:flex-row
                      render 'footer-text', block: block

                    when 'brand_information'
                      render 'footer-contact', block: block
                  endcase
                endfor
              -%}
            </div>
          </div>
        {%- endif -%}
        {% comment %}
          {%- if section.settings.show_social -%}
            <div class="footer__socials flex justify-start md:justify-end xl:justify-start">
              {%- render 'social-icons', size: 'lg', gap: '7' -%}
            </div>
          {%- endif -%}
        {% endcomment %}

        {%- if shop.features.follow_on_shop? and section.settings.enable_follow_on_shop -%}
          <div class="follow-on-shop">
            {{- shop | login_button: action: 'follow' -}}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
  </footer>

  {%- if section.settings.enable_parallax -%}
    <parallax-overlay class="footer-overlay hidden md:block z-20 absolute left-0 top-0 w-full pointer-events-none" data-target="height" data-start="100%" data-stop="0%"></parallax-overlay>
  {%- endif -%}
</div>

