                        #shopify-section-{{ section.id }} .product__desc.block-{{ forloop.index }} * { 
                          font-size: 12px; 
                        }
                      }
                    </style>
                    {{- product.description -}}
                  </div>
  
                {%- when 'title' -%}
                  {%- liquid
                    assign price_block = section.blocks | where: "type", "price" | first
