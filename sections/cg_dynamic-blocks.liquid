    }, 
    {
      "type": "url", 
      "id": "btn_url", 
      "label": "URL"
    }
  ],
  "blocks": [
    {
      "type": "dynamic_block", 
      "name": "Dynamic block", 
      "settings": [
        {
          "type": "text", 
          "id": "block_title", 
          "label": "Title", 
          "default": "Fat Tire Ebikes"
        }, 
        {
          "type": "text", 
          "id": "block_desc", 
          "label": "Description", 
          "default": "Shop Heybike collection of fat tire electric bikes."
        }, 
        {
          "type": "image_picker", 
          "id": "bg_img", 
          "label": "Background image"
        }, 
        {
          "type": "url", 
          "id": "block_link", 
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "CG Dynamic Blocks",
      "blocks": [
        {
          "type": "dynamic_block"
        },
        {
          "type": "dynamic_block"
        }
      ]
    }
  ]
}
{% endschema %}
