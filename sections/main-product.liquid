      >
        <div class="product-info-header">
          <div class="header-column">
            {% for block in section.blocks %}
              {%- case block.type -%}
                {%- when 'description' -%}
                  <div class="product__desc block-{{ forloop.index }} {% comment %}rte {{ block.settings.text_size }}{% endcomment %}" {{ block.shopify_attributes }}>
