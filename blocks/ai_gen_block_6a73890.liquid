    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    padding: {{ block.settings.desktop_padding_top }}px {{ block.settings.desktop_padding_right }}px {{ block.settings.desktop_padding_bottom }}px {{ block.settings.desktop_padding_left }}px;
    align-items: {% if block.settings.desktop_vertical_align == 'top' %}flex-start{% elsif block.settings.desktop_vertical_align == 'middle' %}center{% else %}flex-end{% endif %};
    justify-content: {% if block.settings.desktop_horizontal_align == 'left' %}flex-start{% elsif block.settings.desktop_horizontal_align == 'center' %}center{% else %}flex-end{% endif %};
  }

  @media screen and (max-width: 749px) {
