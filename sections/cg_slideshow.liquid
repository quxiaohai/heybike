{% comment %}
  Adjusted by CLEARgo
{% endcomment %}

{% style %}
  #shopify-section-{{ section.id }} .slideshow-dots { 
    display: none; 
  }

  .main-content {
    margin-top: 0; 
  }
  
  .page-container { 
    margin-top: -108px; 
  }

  .section-{{ section.id }} .slideshow:not(.slideshow--hero) .banner { 
    margin-inline-end: unset; 
    max-width: unset; 
  }

  .section-{{ section.id }} .page-width { 
    /* padding-inline: calc(140vw / 19.2); */
    left: 50%; 
    padding: 0 20px; 
    transform: translateX(-50%); 
  }

  .section-{{ section.id }} .slideshow-content { 
    padding: calc(240vw / 19.2) 0; 
  }

  .section-{{ section.id }} slideshow-words { 
    width: 50%; 
  }

  .section-{{ section.id }} .button { 
    width: fit-content; 
  }

  .section-{{ section.id }} slider-dots { 
    display: none; 
    left: calc(140vw / 19.2); 
    bottom: calc(68vw / 19.2); 
    position: absolute; 
    flex-direction: column; 
    border-radius: 1.25rem; 
    overflow: hidden; 
    
    {% if section.settings.bar_color != blank %}
      background-color: {{ section.settings.bar_color }}; 
    {% endif %}
  }

  .section-{{ section.id }} .flickity-prev-next-button { 
    z-index: 1; 
  }

  .section-{{ section.id }} .flickity-button:hover { 
    background-color: transparent; 
  }

  .section-{{ section.id }} .flickity-button:focus { 
    box-shadow: unset; 
  }

  .section-{{ section.id }} .flickity-page-dots { 
    height: fit-content; 
    margin-block-start: unset; 
    margin-inline-start: unset; 
    margin-block-end: unset; 
  }

  .section-{{ section.id }} .flickity-page-dot { 
    width: fit-content; 
    height: fit-content; 
  }

  .section-{{ section.id }} .flickity-page-dot:before { 
    width: 2px; 
    height: 5px; 
    background-color: unset; 
    border-radius: 1.25rem; 
  }

  .section-{{ section.id }} .flickity-page-dot[aria-current=true]:before { 
    box-shadow: none; 

    {% if section.settings.current_dot_color != blank %}
      background-color: {{ section.settings.current_dot_color }}; 
    {% endif %}
  }

  .section-{{ section.id }} .dot-title-list { 
    bottom: 0; 
    width: 100%; 
    position: absolute; 
    display: flex; 
    flex-direction: column; 
    gap: calc(16vw / 19.2); 
    margin-left: 30px; 
    padding: 36px 0; 
    transition: opacity .3s; 
  }

  .section-{{ section.id }} .dot-title-list li { 
    font-size: calc(14vw / 19.2); 
    color: var(--color-grey); 
    cursor: pointer; 
    pointer-events: auto; 
    transition: font-weight .3s; 
  }

  .section-{{ section.id }} .dot-title-list li.active { 
    font-weight: 600; 

    {% if section.settings.current_dot_color != blank %}
      color: {{ section.settings.current_dot_color }}; 
    {% endif %}
  }

  .section-{{ section.id }} .button.icon-with-text:hover .btn-text { 
    color: var(--color-white); 
  }

  .section-{{ section.id }} .progress-bar { 
    bottom: 0; 
    width: 2px; 
    height: 12px; 
    position: absolute;
    display: flex;
    flex-direction: column;
    gap: calc(16vw / 19.2);
    margin: 64px 0; 
    /* left: calc(140vw / 19.2); */
    /* bottom: calc(68vw / 19.2); */
    border-radius: 20px; 
    background-color: var(--color-grey); 
    transition: opacity .3s;
  }

  .section-{{ section.id }} .progress-bar:after {
    content: ''; 
    top: 0; 
    left: 0; 
    width: 100%; 
    height: 0; 
    position: absolute; 
    display: block; 
    background-color: var(--color-primary); 
    animation: slideshowTimingAnim 3s linear infinite; 
  }

  /* Animations */
  @keyframes slideshowTimingAnim {
    0% {
      height: 0; 
    }
    100% {
      height: 100%; 
    }
  }

  /* Responsive */
  /* Mobile */
  @media (max-width: 767px) { 
    .page-container { 
      margin-top: -68px; 
    }
    
    .section-{{ section.id }} div:has(.slideshow-content) { 
      height: 100%; 
    }

    .section-{{ section.id }} .page-width { 
      padding: 20px; 
    }

    .section-{{ section.id }} .slideshow-content { 
      /* max-height: 1200px; */
      /* margin-top: 72px; */
      padding: 40px 0; 
    }

    .section-{{ section.id }} .slick-list { 
      width: 100%; 
    }

    .section-{{ section.id }} .slideshow-word { 
      text-align: center; 
      align-items: center; 
    }

    .section-{{ section.id }} slideshow-words { 
      width: 100%; 
    }

    .section-{{ section.id }} slider-dots { 
      left: 50%; 
      display: flex; 
      flex-direction: row; 
      gap: 12px; 
      transform: translateX(-50%); 
      background-color: unset; 
    }

    .section-{{ section.id }} slider-dots .flickity-page-dot:before { 
      width: 32px; 
      height: 4px; 
      transition: background-color .3s; 

      {% if section.settings.bar_color != blank %}
        background-color: {{ section.settings.bar_color }}; 
      {% endif %}
    }

    .section-{{ section.id }} .flickity-page-dot[aria-current=true] { 
      position: relative; 
      width: 32px; 
      height: 4px; 

      {% if section.settings.bar_color != blank %}
        background-color: {{ section.settings.bar_color }}; 
      {% endif %}
    }

    .section-{{ section.id }} .flickity-page-dot[aria-current=true]:before { 
      width: 55%;
      position: absolute;
      z-index: 1;
      animation: selectedDot 1.2s ease-in infinite alternate;

      {% if section.settings.current_dot_color != blank %}
        background-color: {{ section.settings.current_dot_color }}; 
      {% endif %}
    }

    .section-{{ section.id }} .dot-title-list {
      display: none; 
    }

    .section-{{ section.id }} .progress-bar {
      display: none; 
    }
  }

  /* Tablet */
  @media (min-width: 768px) and (max-width: 1366px) { 
    .section-{{ section.id }} .page-width { 
      /* padding-inline: calc(140vw / 13.66); */
    }

    .section-{{ section.id }} .slideshow-content { 
      padding: calc(240vw / 13.66) 0; 
    }
    
    .section-{{ section.id }} slider-dots { 
      left: calc(96vw / 13.66); 
      bottom: calc(68vw / 13.66); 
    }

    .section-{{ section.id }} .dot-title-list { 
      gap: calc(16vw / 13.66); 
      /* bottom: calc(36vw / 13.66); */
      /* left: calc(120vw / 13.66); */
    }
  }

  /* Desktop */
  @media (min-width: 1920px) { 
    .section-{{ section.id }} .slideshow-content { 
      padding: 240px 0; 
    }

    .section-{{ section.id }} slider-dots { 
      left: 140px; 
      bottom: 68px; 
    }

    .section-{{ section.id }} .dot-title-list { 
      gap: 16px; 
      /* bottom: 36px; */
      /* left: 172px; */
    }

    .section-{{ section.id }} .dot-title-list li { 
      font-size: 14px; 
    }
  }
{% endstyle %}

{%- assign first_block = section.blocks | first -%}
<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- render 'section-variables', section: section -%}
    {%- if first_block != blank and first_block.settings.image != blank and section.settings.image_height == 'adapt' %}
      --ratio-percent: {{ 1 | divided_by: first_block.settings.image.aspect_ratio | times: 100 }}%;
    {% endif -%}
  }

  {%- assign first_block_image_mobile = first_block.settings.image_mobile | default: first_block.settings.image -%}
  {%- if first_block != blank and first_block_image_mobile != blank and section.settings.image_height_mobile == 'adapt' %}
    @media screen and (max-width: 767px) {
      #shopify-section-{{ section.id }} {
        --ratio-percent: {{ 1 | divided_by: first_block_image_mobile.aspect_ratio | times: 100 }}%;
      }
    }
  {% endif -%}
</style>

{%- if section.blocks.size > 0 -%}
<div class="section-{{ section.id }} section section--padding{% if section.settings.divider %} section--divider{% endif %}{% if section.settings.rounded %} section--rounded relative{% endif %}">
  <div class="{% unless section.settings.full_width %}page-width {% endunless %}relative">
    {%- if section.blocks.size > 1 and section.settings.autoplay -%}
      <button
        type="button"
        class="slideshow-control flex items-center justify-center rounded-full sr-only"
        is="control-button"
        aria-controls="Slider-{{ section.id }}"
        aria-live="polite"
      >
        <span class="slideshow-control__pause">
          {%- render 'icon', icon: 'pause' -%}
          <span class="sr-only">{{ 'sections.slideshow.pause_slideshow' | t }}</span>
        </span>
        <span class="slideshow-control__play">
          {%- render 'icon', icon: 'play' -%}
          <span class="sr-only">{{ 'sections.slideshow.play_slideshow' | t }}</span>
        </span>
      </button>
    {%- endif -%}
    <slideshow-element class="slideshow block" id="Slider-{{ section.id }}"{% if section.settings.autoplay %} autoplay autoplay-speed="{{ section.settings.autoplay_speed }}"{% endif %}>
      {%- capture sizes -%}{% if section.settings.full_width %}100vw{% else %}min({{ settings.page_width }}px, 100vw){% endif %}{%- endcapture -%}
      {%- for block in section.blocks -%}
        {%- liquid
          if forloop.first and section.index == 1
            assign loading = 'eager'
            assign fetchpriority = 'high'
          else
            assign loading = 'lazy'
            assign fetchpriority = 'low'
          endif
        -%}
        {%- case block.type -%}
          {%- when 'image' -%}
            <div class="banner media--{{ section.settings.image_height }} mobile:media--{{ section.settings.image_height_mobile }} w-full overflow-hidden" data-type="image" {{ block.shopify_attributes }}>
              <media-element class="banner__media block w-full h-full overflow-hidden"{% if section.settings.enable_parallax %} data-parallax="0.3" data-parallax-dir="{{ section.settings.parallax_direction }}"{% endif %}>
                <animate-element data-animate="zoom-out" class="media media--height block w-full h-full relative overflow-hidden" paused>
                  <picture class="media media--height block w-full h-full relative overflow-hidden">
                    {%- if block.settings.image != blank -%}
                      {%- if block.settings.image_mobile -%}
                        <source
                          media="(max-width: 767px)"
                          srcset="{{ block.settings.image_mobile | image_url: width: '400x' }} 400w, {{ block.settings.image_mobile | image_url: width: '600x' }} 600w, {{ block.settings.image_mobile | image_url: width: '800x' }} 800w, {{ block.settings.image_mobile | image_url: width: '1000x' }} 1000w"
                          width="{{ block.settings.image_mobile.width }}"
                          height="{{ block.settings.image_mobile.height }}"
                        >
                      {%- endif -%}
    
                      {{- block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: loading, fetchpriority: fetchpriority, sizes: sizes, widths: '300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200', is: 'lazy-image', class: 'banner__image' -}}
                    {%- else -%}
                      {%- capture placeholder -%}{% cycle 'lifestyle-1', 'lifestyle-2' %}{%- endcapture -%}
                      {{- placeholder | placeholder_svg_tag: 'banner__image banner__overlay placeholder' -}}
                    {%- endif -%}
                  </picture>
                </animate-element>
              </media-element>
              <span class="banner__overlay absolute top-0 left-0 w-full h-full {% comment %}pointer-events-none{% endcomment %}"></span>
              {%- if block.settings.button_label == blank and block.settings.button_link != blank -%}
                <a href="{{ block.settings.button_link }}"{% if block.settings.button_external %} target="_blank" rel="noopener"{% endif %} class="block absolute top-0 left-0 w-full h-full" aria-hidden="true">&nbsp;</a>
              {%- endif -%}
            </div>

          {%- when 'video' -%}
            <div class="banner media--{{ section.settings.image_height }} mobile:media--{{ section.settings.image_height_mobile }} w-full overflow-hidden" data-type="video" {{ block.shopify_attributes }}>
              <media-element class="banner__media block w-full h-full overflow-hidden"{% if section.settings.enable_parallax %} data-parallax="0.3" data-parallax-dir="{{ section.settings.parallax_direction }}"{% endif %}>
                <animate-element data-animate="zoom-out" class="media media--height block w-full h-full relative overflow-hidden" paused>
                  {%- if block.settings.video_mobile or block.settings.video_url_mobile -%}
                    {%- render 'video',
                      sizes: sizes,
                      loading: loading,
                      fetchpriority: fetchpriority,
                      video: block.settings.video_mobile,
                      video_url: block.settings.video_url_mobile,
                      muted: true,
                      autoplay: true, 
                      loop: true,
                      description: block.settings.description,
                      cover_image: block.settings.cover_image_mobile,
                      show_play_button: false,
                      is_mobile: true,
                      class: 'banner__image'
                    -%}
                  {%- endif -%}
            
                  {%- render 'video',
                    sizes: sizes,
                    loading: loading,
                    fetchpriority: fetchpriority,
                    video: block.settings.video,
                    video_url: block.settings.video_url,
                    muted: true, 
                    autoplay: true, 
                    loop: true,
                    description: block.settings.description,
                    cover_image: block.settings.cover_image,
                    show_play_button: false,
                    class: 'banner__image'
                  -%}
                </animate-element>
              </media-element>
              <span class="banner__overlay absolute top-0 left-0 w-full h-full {% comment %}pointer-events-none{% endcomment %}"></span>
              {%- if block.settings.button_label == blank and block.settings.button_link != blank -%}
                <a href="{{ block.settings.button_link }}"{% if block.settings.button_external %} target="_blank" rel="noopener"{% endif %} class="block absolute top-0 left-0 w-full h-full" aria-hidden="true">&nbsp;</a>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </slideshow-element>
    <div class="page-width absolute bottom-0 left-0 w-full pointer-events-none">
      <div class="slideshow-content">
        <slideshow-words class="slideshow-words grid items-center" aria-controls="Slider-{{ section.id }}">
          {%- for block in section.blocks -%}
            <div class="slideshow-word flex flex-col justify-between gap-6 block-{{ forloop.index }}" data-index="{{ forloop.index0 }}" aria-current="{% if forloop.first %}true{% else %}false{% endif %}">
              <style>
                .section-{{ section.id }} .block-{{ forloop.index }} .subheading { 
                  {% if block.settings.subheading_font_size != blank %}
                    font-size: {{ block.settings.subheading_font_size }}px; 
                  {% endif %}
                }

                /* Responsive */
                /* Mobile */
                @media (max-width: 768px) { 
                  .section-{{ section.id }} .block-{{ forloop.index }} .subheading { 
                    {% if block.settings.subheading_font_size_mobile != blank %}
                      font-size: {{ block.settings.subheading_font_size_mobile }}px; 
                    {% endif %}
                  }
                }
              </style>
              {% if block.settings.subheading != blank %}
                <split-words class="split-words block" data-animate="fade-up-large" data-animate-delay="250"><p class="subheading">{{ block.settings.subheading }}</p></split-words>
              {% endif %}
              {%- if block.settings.heading != blank -%}
                <div class="banner__box banner__box--{{ section.settings.content_width }}">
                  <{{ block.settings.heading_tag }} class="heading leading-none {{ block.settings.heading_size }}">
                    <split-words class="split-words block" data-animate="fade-up-large" data-animate-delay="250">{{ block.settings.heading }}</split-words>
                  </{{ block.settings.heading_tag }}>
                </div>
              {%- endif -%}

              {%- if block.settings.button_label != blank -%}
                {%- render 'button',
                  label: block.settings.button_label,
                  link: block.settings.button_link,
                  style: block.settings.button_style,
                  external: block.settings.button_external,
                  show_icon: block.settings.button_icon,
                  classes: 'button--blur button--fixed pointer-events-auto',
                  shopify_attributes: block.shopify_attributes
                -%}
              {%- endif -%}
            </div>
          {%- endfor -%}
        </slideshow-words>

        <div class="slideshow-dots flex items-end justify-between">
          {% if section.blocks.size > 1 and section.settings.show_arrow %}
            <button type="button" is="previous-button" class="hidden md:block pointer-events-auto" aria-controls="Slider-{{ section.id }}" aria-label="{{ 'general.pagination.previous' | t | escape }}">
              {%- render 'icon', icon: 'arrow-left-long', class: 'transform' -%}
            </button>
          {% endif %}
          {%- if section.blocks.size > 1 and section.settings.show_navigation -%}
            <slider-dots class="flickity-page-dots w-auto pointer-events-auto" aria-controls="Slider-{{ section.id }}">
              {%- for block in section.blocks -%}
                <button type="button" class="flickity-page-dot" data-index="{{ forloop.index0 }}" aria-current="{% if forloop.first %}true{% else %}false{% endif %}">
                  <span class="sr-only">{{ 'general.pagination.page' | t: number: forloop.index }}</span>
                </button>
              {%- endfor -%}
            </slider-dots>
          {%- endif -%}
          {% if section.blocks.size > 1 and section.settings.show_arrow %}
            <button type="button" is="next-button" class="hidden md:block pointer-events-auto" aria-controls="Slider-{{ section.id }}" aria-label="{{ 'general.pagination.next' | t | escape }}">
              {%- render 'icon', icon: 'arrow-right-long', class: 'transform' -%}
            </button>
          {% endif %}
        </div>

        <ul class="dot-title-list">
          {%- for block in section.blocks -%}
            <li class="index-{{ forloop.index }} dot-title">
              {{ block.settings.dot_title }}
            </li>
          {% endfor %}
        </ul>

        <div class="progress-bar"></div>
      </div>
    </div>
  </div>
</div>
{%- endif -%}

<script>
  addEventListener("DOMContentLoaded", (e) => { 
    const dotTitleList{{ section.id | remove: '-' }} = document.querySelector('.section-{{ section.id }} .dot-title-list'); 
    const dotTitles{{ section.id | remove: '-' }} = document.querySelectorAll('.section-{{ section.id }} .dot-title-list li'); 

    const slideshow{{ section.id | remove: '-' }} = new Flickity('.section-{{ section.id }} slideshow-element', {
      prevNextButtons: true
    }); 

    function additionalEffect() { 
      /* Auto setting current title as active */
      const selectedIndex = slideshow{{ section.id | remove: '-' }}.selectedIndex; 

      /* Remove active class from all titles */
      dotTitles{{ section.id | remove: '-' }}.forEach(title => { 
        title.style.display = "none"; 
        title.classList.remove('active'); 
      }); 

      /* Set the order for the current title */
      dotTitles{{ section.id | remove: '-' }}[selectedIndex].classList.add('active'); 
      dotTitles{{ section.id | remove: '-' }}[selectedIndex].style.order = "1"; 
      dotTitles{{ section.id | remove: '-' }}[selectedIndex].style.display = "block"; 

      /* Set order for the next title */
      if (dotTitles{{ section.id | remove: '-' }}[selectedIndex + 1]) { 
        dotTitles{{ section.id | remove: '-' }}[selectedIndex + 1].style.order = "2"; 
        dotTitles{{ section.id | remove: '-' }}[selectedIndex + 1].style.display = "block"; 
      } else {
        dotTitles{{ section.id | remove: '-' }}[0].style.order = "2"; 
        dotTitles{{ section.id | remove: '-' }}[0].style.display = "block"; 
      }

      if (selectedIndex > 0) {
        dotTitles{{ section.id | remove: '-' }}[selectedIndex - 1].style.order = "0"; 
        dotTitles{{ section.id | remove: '-' }}[selectedIndex - 1].style.display = "block"; 
      } else {
        dotTitles{{ section.id | remove: '-' }}[dotTitles{{ section.id | remove: '-' }}.length - 1].style.order = "0"; 
        dotTitles{{ section.id | remove: '-' }}[dotTitles{{ section.id | remove: '-' }}.length - 1].style.display = "block"; 
      }
    }

    slideshow{{ section.id | remove: '-' }}.on('ready', function() { 
      var firstVideo = flkty.cells[0].element.querySelector('video'); 
      if (firstVideo) { 
        firstVideo.play(); 
      }
    }); 

    slideshow{{ section.id | remove: '-' }}.on('change', function(index) { 
      console.log("On change"); 
      additionalEffect(); 
    }); 

    dotTitles{{ section.id | remove: '-' }}.forEach((dotTitle, i) => { 
      dotTitle.addEventListener("click", (event) => { 
        slideshow{{ section.id | remove: '-' }}.select(i); 
      }); 
    }); 
    
    slideshow{{ section.id | remove: '-' }}.select(1); 
    slideshow{{ section.id | remove: '-' }}.select(0); 
  }); 
</script>

