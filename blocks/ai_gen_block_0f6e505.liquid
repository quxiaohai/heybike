<script>
  (function() {
    class HeroBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.countdown = this.querySelector('.ai-hero-banner-countdown-{{ ai_gen_id }}');
        this.countdownInterval = null;
      }

      connectedCallback() {
        if (this.countdown) {
          this.initCountdown();
        }
      }

      disconnectedCallback() {
        if (this.countdownInterval) {
          clearInterval(this.countdownInterval);
        }
      }

      initCountdown() {
        const targetDate = this.countdown.getAttribute('data-countdown-target');
        if (!targetDate) return;

        const targetTime = new Date(targetDate).getTime();

        const daysEl = this.countdown.querySelector('[data-countdown-days]');
        const hoursEl = this.countdown.querySelector('[data-countdown-hours]');
        const minutesEl = this.countdown.querySelector('[data-countdown-minutes]');
        const secondsEl = this.countdown.querySelector('[data-countdown-seconds]');

        const updateCountdown = () => {
          const now = new Date().getTime();
          const distance = targetTime - now;

          if (distance < 0) {
            if (this.countdownInterval) {
              clearInterval(this.countdownInterval);
            }
            daysEl.textContent = '0';
            hoursEl.textContent = '0';
            minutesEl.textContent = '0';
            secondsEl.textContent = '0';
            return;
          }

          const days = Math.floor(distance / (1000 * 60 * 60 * 24));
          const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
          const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
          const seconds = Math.floor((distance % (1000 * 60)) / 1000);

          daysEl.textContent = days;
          hoursEl.textContent = hours;
          minutesEl.textContent = minutes;
          secondsEl.textContent = seconds;
        };

        updateCountdown();
        this.countdownInterval = setInterval(updateCountdown, 1000);
      }
    }

    customElements.define('hero-banner-{{ ai_gen_id }}', HeroBanner{{ ai_gen_id }});
  })();
</script>

