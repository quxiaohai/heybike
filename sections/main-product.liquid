      gap: 0; 
      background: unset; 
      font-size: 10px; 
      padding: 0; 
    }

    #shopify-section-{{ section.id }} .condition.mobile { 
      display: block; 
    }

    #shopify-section-{{ section.id }} .condition.desktop { 
      display: none; 
    }

    #shopify-section-{{ section.id }} .condition-icon { 
      width: 20px; 
    }

    #shopify-section-{{ section.id }} .compare { 
      padding: 12px 30px; 
      font-size: 10px; 
      white-space: nowrap; 
    }

    #shopify-section-{{ section.id }} fieldset .form__label { 
      font-size: 16px; 
    }

    #shopify-section-{{ section.id }} .product-media-introduce {
      row-gap: 12px; 
      padding: 0 0 40px 0; 
    }

    #shopify-section-{{ section.id }} .product-media-introduce.desktop { 
      display: none; 
    }

    #shopify-section-{{ section.id }} .product-media-introduce.mobile { 
      display: flex; 
    }

    #shopify-section-{{ section.id }} .product-media-introduce li img {
      width: 16px; 
      margin-right: 12px; 
    }

    #shopify-section-{{ section.id }} .product-media-introduce .introduce-info_title {
      font-size: 12px; 
    }

    #shopify-section-{{ section.id }} .product-media-introduce .introduce-info_remark {
      font-size: 8px; 
    }

    #shopify-section-{{ section.id }} .quantity {
      display: none; 
