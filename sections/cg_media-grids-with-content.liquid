{% style %}
  .section-{{ section.id }} { 
    background-color: var(--color-white); 
    padding: 80px 0; 
  }

  .section-{{ section.id }} .media-grids-with-content-wrapper { 
    max-width: 1648px; 
    margin: 0 auto; 
    padding: 0 24px; 
  }

  .section-{{ section.id }} .media-grids { 
    display: grid; 
    grid-template-columns: 1fr 1fr 1fr 1fr 1fr; 
    grid-template-rows: 1fr 1fr; 
    aspect-ratio: 1600 / 500; 
    gap: 8px; 
    margin-bottom: 8px; 
  }

  .section-{{ section.id }} .media-grid { 
    display: flex; 
    flex-direction: column; 
    background-size: cover; 
    background-position: center; 
    border-radius: 10px; 
  }

  .section-{{ section.id }} .section-footer { 
    display: flex; 
    padding: 72px; 
    border-radius: 10px; 
    
    {% if section.settings.footer_bg_color != blank %}
      background-color: {{ section.settings.footer_bg_color }}; 
    {% endif %}
  }

  .section-{{ section.id }} .section-footer > * { 
    width: 50%; 
  }

  .section-{{ section.id }} .section-content { 
    margin-bottom: 24px; 
  }

  .section-{{ section.id }} .button-with-url { 
    justify-content: space-between; 
    border: none; 
    border-bottom: 1px solid var(--color-grey); 
    border-radius: 0; 
    padding: 16px 0; 
  }

  .section-{{ section.id }} .button-with-url:after { 
    width: 10px; 
    height: 20px; 

    {% if section.settings.btn_icon != blank %}
      background-image: url({{ section.settings.btn_icon | image_url: width: 10 }}); 
    {% endif %}
  }

  .section-{{ section.id }} .button-with-url:hover:after { 
    transform: unset; 
  }

  /* Responsive */
  /* Mobile */
  @media (max-width: 767px) { 
    .section-{{ section.id }} .media-grids-with-content-wrapper { 
      padding: 0 12.5px; 
    }
    
    .section-{{ section.id }} .media-grids { 
      grid-template-rows: 1fr 1fr 1fr 1fr 1fr; 
      grid-template-columns: 1fr 1fr; 
      aspect-ratio: 700 / 1370; 
    }

    .section-{{ section.id }} .section-footer { 
      flex-direction: column; 
      padding: 18px; 
    }

    .section-{{ section.id }} .section-footer > * { 
      width: 100%; 
    }

    .section-{{ section.id }} .section-heading { 
      margin-bottom: 24px; 
      font-size: 24px; 
    }

    .section-{{ section.id }} .section-content {
      margin-bottom: 0; 
      font-size: 10px; 
      line-height: 15px; 
    }
  }

  /* Tablet */
  @media (min-width: 768px) and (max-width: 1366px) { 

  }

  /* Desktop */
  @media (min-width: 1920px) { 
    
  }
{% endstyle %}

<!-- View -->
<div class="section-{{ section.id }} media-grids-with-content-container">
  <div class="media-grids-with-content-wrapper">
    <ul class="media-grids">
      {% for block in section.blocks %}
        <li class="media-grid block-{{ forloop.index }}">
          {% style %}
            .section-{{ section.id }} .media-grid.block-{{ forloop.index }} { 
              {% if block.settings.vertical_alignment != blank %}
                {% case block.settings.vertical_alignment %}
                  {% when 'top' %}
                    justify-content: flex-start; 
                  {% when 'bottom' %}
                    justify-content: flex-end; 
                {% endcase %} 
              {% endif %}
              {% if block.settings.horizontal_alignment != blank %}
                {% case block.settings.horizontal_alignment %}
                  {% when 'left' %}
                    align-items: flex-start;
                    text-align: left;
                  {% when 'center' %}
                    align-items: center;
                    text-align: center;
                  {% when 'right' %}
                    align-items: flex-end;
                    text-align: right;
                {% endcase %}
              {% endif %}
              {% if block.settings.padding != blank %}
                padding: {{ block.settings.padding }}px; 
              {% endif %}
              {% if block.settings.bg_image != blank %}
                background-image: url({{ block.settings.bg_image | image_url: width: 1920 }}); 
              {% endif %}
              {% if block.settings.grid_column_start != blank %}
                grid-column-start: {{ block.settings.grid_column_start }}; 
              {% endif %}
              {% if block.settings.grid_column_end != blank %}
                grid-column-end: {{ block.settings.grid_column_end }}; 
              {% endif %}
              {% if block.settings.grid_row_start != blank %}
                grid-row-start: {{ block.settings.grid_row_start }}; 
              {% endif %}
              {% if block.settings.grid_row_end != blank %}
                grid-row-end: {{ block.settings.grid_row_end }}; 
              {% endif %}
            }

            .section-{{ section.id }} .media-grid.block-{{ forloop.index }} .grid-heading { 
              {% if block.settings.grid_heading_color != blank %}
                color: {{ block.settings.grid_heading_color }}; 
              {% endif %}
              {% if block.settings.grid_heading_font_size != blank %}
                font-size: calc({{ block.settings.grid_heading_font_size }}vw / 19.2); 
              {% endif %}
            }

            .section-{{ section.id }} .media-grid.block-{{ forloop.index }} .grid-subheading { 
              line-height: 100%; 

              {% if block.settings.grid_subheading_color != blank %}
                color: {{ block.settings.grid_subheading_color }}; 
              {% endif %}
              {% if block.settings.grid_subheading_font_size != blank %}
                font-size: calc({{ block.settings.grid_subheading_font_size }}vw / 19.2); 
              {% endif %}
            }

            /* Responsive */
            /* Mobile */
            @media (max-width: 767px) { 
              .section-{{ section.id }} .media-grid.block-{{ forloop.index }} { 
                padding: 10px; 
                
                {% if block.settings.bg_image_mobile != blank %}
                  background-image: url({{ block.settings.bg_image_mobile | image_url: width: 768 }}); 
                {% endif %}
                {% if block.settings.grid_column_start != blank %}
                  grid-row-start: {{ block.settings.grid_column_start }}; 
                {% endif %}
                {% if block.settings.grid_column_end != blank %}
                  grid-row-end: {{ block.settings.grid_column_end }}; 
                {% endif %}
                {% if block.settings.grid_row_start != blank %}
                  grid-column-start: {{ block.settings.grid_row_start }}; 
                {% endif %}
                {% if block.settings.grid_row_end != blank %}
                  grid-column-end: {{ block.settings.grid_row_end }}; 
                {% endif %}
              }

              .section-{{ section.id }} .media-grid.block-{{ forloop.index }} .grid-heading { 
                {% if block.settings.grid_heading_font_size_mobile != blank %}
                  font-size: {{ block.settings.grid_heading_font_size_mobile }}px; 
                {% endif %}
              }

              .section-{{ section.id }} .media-grid.block-{{ forloop.index }} .grid-subheading { 
                {% if block.settings.grid_subheading_font_size_mobile != blank %}
                  font-size: {{ block.settings.grid_subheading_font_size_mobile }}px; 
                {% endif %}
              }
            }

            /* Tablet */
            @media (min-width: 768px) and (max-width: 1366px) { 
              .section-{{ section.id }} .media-grid.block-{{ forloop.index }} .grid-heading { 
                {% if block.settings.grid_heading_font_size != blank %}
                  font-size: calc({{ block.settings.grid_heading_font_size }}vw / 13.66); 
                {% endif %}
              }

              .section-{{ section.id }} .media-grid.block-{{ forloop.index }} .grid-subheading { 
                {% if block.settings.grid_subheading_font_size != blank %}
                  font-size: calc({{ block.settings.grid_subheading_font_size }}vw / 13.66); 
                {% endif %}
              }
            }

            /* Desktop */
            @media (min-width: 1920px) { 
              .section-{{ section.id }} .media-grid.block-{{ forloop.index }} .grid-heading { 
                {% if block.settings.grid_heading_font_size != blank %}
                  font-size: {{ block.settings.grid_heading_font_size }}px; 
                {% endif %}
              }
              
              .section-{{ section.id }} .media-grid.block-{{ forloop.index }} .grid-subheading { 
                {% if block.settings.grid_subheading_font_size != blank %}
                  font-size: {{ block.settings.grid_subheading_font_size }}px; 
                {% endif %}
              }
            }
          {% endstyle %}
          {% if block.settings.grid_heading != blank %}
            <h3 class="grid-heading">{{ block.settings.grid_heading }}</h3>
          {% endif %}
          {% if block.settings.grid_subheading != blank %}
            <p class="grid-subheading">{{ block.settings.grid_subheading }}</p>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
    <div class="section-footer">
      {% if section.settings.heading != blank %}
        <h3 class="section-heading">{{ section.settings.heading }}</h3>
      {% endif %}
      <div class="section-footer-column">
        {% if section.settings.content != blank %}
          <p class="section-content">{{ section.settings.content }}</p>
        {% endif %}
        {% if section.settings.btn_url != blank or section.settings.btn_text != blank %}
          <a class="button button--secondary icon-with-text button-with-url" href="{{ section.settings.btn_url }}">{{ section.settings.btn_text }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
