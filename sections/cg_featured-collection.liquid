{% style %}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- render 'section-variables', section: section -%}
  }

  .section-{{ section.id }} .title-wrapper { 
    max-width: 1440px; 
    margin-inline: auto; 
    padding: 0 20px; 
    /* padding: 0 var(--page-padding); */
  }

  .section-{{ section.id }} slider-element { 
    /* width: calc(100% + var(--page-padding) * 2); */
    width: 100%; 
    max-width: unset; 
    /* margin: 0 auto; */
    padding: 0 calc((100% - 1400px) / 2); 
    /* padding: 0 var(--page-padding); */
    overflow-x: auto; 
  }

  .section-{{ section.id }} motion-list { 
    top: 0 !important; 
    width: fit-content; 
    display: flex; 
    cursor: grab; 
  }

  .section-{{ section.id }} .product-card { 
    overflow: hidden; 

    {% if section.settings.direction == "horizontal" %}
      display: flex; 
      width: calc(785vw / 19.2); 
    {% else %}
      width: calc(460vw / 19.2); 
      /*width: calc(602vw / 19.2); */
    {% endif %}

    {% if section.settings.border_color != blank %}
      border: 1px solid {{ section.settings.border_color }}; 
    {% endif %}
  }

  .section-{{ section.id }} .product-card__content { 
    {% if section.settings.direction == "horizontal" %}
      margin-left: auto; 
      padding-right: calc(50vw / 19.2); 
    {% endif %}
  }

  .section-{{ section.id }} a.media--contain { 
    {% if section.settings.direction == "horizontal" %}
      height: 100%; 
      display: flex; 
      align-items: anchor-center; 
    {% endif %}
  }

  .section-{{ section.id }} a.media--contain img { 
    {% if section.settings.direction == "horizontal" %}
      width: calc(320vw / 19.2); 
      margin: auto 0 auto calc(36vw / 19.2); 
    {% endif %}
  }

  .section-{{ section.id }} .variant-images { 
    height: fit-content; 
  }

  .section-{{ section.id }} .product-card .review-counter { 
    {% if section.settings.hide_review_counter == true %}
      display: none; 
    {% endif %}
  }

  .section-{{ section.id }} .price { 
    {% if section.settings.direction == "horizontal" %}
      flex-direction: column; 
      align-items: flex-start; 
    {% endif %}
  }

  .section-{{ section.id }} .price__regular { 
    {% if section.settings.direction == "horizontal" %}
      font-size: calc(32vw / 19.2); 
    {% endif %}
  }

  .section-{{ section.id }} .price__sale { 
    {% if section.settings.direction == "horizontal" %}
      font-size: calc(18vw / 19.2); 
    {% endif %}
  }

  .section-{{ section.id }} .color-swatch { 
    {% if section.settings.direction == "horizontal" %}
      width: 18px; 
      height: 18px; 
      aspect-ratio: 1; 
    {% endif %}
  }

  .section-{{ section.id }} .color-swatch.active { 
    outline-offset: calc(3vw / 19.2) !important; 
  }

  .section-{{ section.id }} secondary-medias { 
    height: auto; 
  }

  .section-{{ section.id }} .product-card__spec { 
    {% if section.settings.hide_spec == true %}
      display: none; 
    {% endif %}
  }

  .section-{{ section.id }} .shop-now-btn { 
    {% if section.settings.shop_now_button == "icon" %}
      padding: calc(16vw / 19.2) !important; 
    {% endif %}
  }

  .section-{{ section.id }} .shop-now-btn .inner-text { 
    {% if section.settings.shop_now_button == "icon" %}
      display: none; 
    {% endif %}
  }

  .section-{{ section.id }} .shop-now-btn svg { 
    width: 25px !important; 
    height: 25px !important; 
    aspect-ratio: 1; 

    {% if section.settings.shop_now_button == "text" %}
      display: none; 
    {% endif %}
  }

  .section-{{ section.id }} .badge { 
    {% if section.settings.direction == "horizontal" %}
      border-radius: 6px; 
      padding: 5px; 
    {% endif %}
  }

  .product-card .product-card__media, 
  .product-card .product-card__media *, 
  .product-card .product-card__content { 
    max-width: calc(460vw / 19.2);
    /* max-width: calc(602vw / 19.2); */
  }

  /* Responsive */
  /* Mobile */
  @media (max-width: 767px) { 
    .section-{{ section.id }} .title-wrapper {
      justify-content: space-between; 
    }
    
    .section-{{ section.id }} slider-element { 
      margin: 0; 
      padding: 0 12.5px; 
    }

    .section-{{ section.id }} .product-card { 
      width: 65vw; 
    }

    .product-card .product-card__media, 
    .product-card .product-card__media *, 
    .product-card .product-card__content { 
      max-width: 65vw; 
    }
  }

  /* Tablet */
  @media (min-width: 768px) and (max-width: 1366px) { 
    .section-{{ section.id }} slider-element {
      max-width: unset; 
      padding: 0; 
    }
    
    .section-{{ section.id }} .product-card { 
      {% if section.settings.direction == "horizontal" %}
        width: calc(785vw / 13.66); 
      {% else %}
        width: calc(460vw / 13.66); 
        /* width: calc(602vw / 13.66); */
      {% endif %}
    }

    .section-{{ section.id }} a.media--contain img { 
      {% if section.settings.direction == "horizontal" %}
        width: calc(320vw / 13.66); 
        margin: auto 0 auto calc(36vw / 13.66); 
      {% endif %}
    }

    .section-{{ section.id }} .product-card__content { 
      {% if section.settings.direction == "horizontal" %}
        padding-right: calc(50vw / 13.66); 
      {% endif %}
    }

    .section-{{ section.id }} .price .price__regular { 
      {% if section.settings.direction == "horizontal" %}
        font-size: calc(32vw / 13.66); 
      {% endif %}
    }

    .section-{{ section.id }} .price__sale { 
      {% if section.settings.direction == "horizontal" %}
        font-size: calc(18vw / 13.66); 
      {% endif %}
    }

    .section-{{ section.id }} .color-swatch.active { 
      outline-offset: calc(3vw / 13.66) !important; 
    }

    .section-{{ section.id }} .shop-now-btn { 
      {% if section.settings.shop_now_button == "icon" %}
        padding: calc(16vw / 13.66) !important; 
      {% endif %}
    }

    .product-card .product-card__media, 
    .product-card .product-card__media *, 
    .product-card .product-card__content { 
      max-width: calc(460vw / 13.66); 
      /* max-width: calc(602vw / 13.66); */
    }

    .section-{{ section.id }} motion-list {
      padding: 0 20px; 
    }
  }

  /* Desktop */
  @media (min-width: 1920px) { 
    .section-{{ section.id }} .product-card { 
      {% if section.settings.direction == "horizontal" %}
        width: 785px; 
      {% else %}
        /* width: 602px; */
        width: 460px; 
      {% endif %}
    }

    .section-{{ section.id }} a.media--contain img { 
      {% if section.settings.direction == "horizontal" %}
        width: 320px; 
        margin: auto 0 auto 36px; 
      {% endif %}
    }

    .section-{{ section.id }} .product-card__content { 
      {% if section.settings.direction == "horizontal" %}
        padding-right: 50px; 
      {% endif %}
    }

    .section-{{ section.id }} .price .price__regular { 
      {% if section.settings.direction == "horizontal" %}
        font-size: 32px; 
      {% endif %}
    }

    .section-{{ section.id }} .price__sale { 
      {% if section.settings.direction == "horizontal" %}
        font-size: 18px; 
      {% endif %}
    }

    .section-{{ section.id }} .color-swatch.active { 
      outline-offset: 3px !important; 
    }

    .section-{{ section.id }} .shop-now-btn { 
      {% if section.settings.shop_now_button == "icon" %}
        padding: 16px !important; 
      {% endif %}
    }


    .product-card .product-card__media, 
    .product-card .product-card__media *, 
    .product-card .product-card__content { 
      /* max-width: 602px; */
      max-width: 460px; 
    }
  }
{% endstyle %}

{%- liquid
  assign collection = section.settings.collection
  assign products = section.settings.products | default: collection.products
-%}

<div class="section-{{ section.id }} section section--padding{% if section.settings.divider %} section--divider{% endif %}{% if section.settings.rounded %} section--rounded relative{% endif %}">
  <div class="{% if section.settings.full_width %} page-width--full{% endif %} relative">
    {%- capture view_all -%}
      {%- if section.settings.show_view_all and collection != blank and section.settings.product_limit < collection.all_products_count -%}
        <a class="button button--primary icon-with-text button-with-url" href="{{ collection.url }}" is="hover-link" aria-label="{{ 'sections.featured_collection.view_all_label' | t: collection_name: collection.title }}">
          <span class="btn-fill" data-fill></span>
          <span class="btn-text">
            {{ 'sections.featured_collection.shop_all' | t }}
          </span>
        </a>
      {%- endif -%}
    {%- endcapture -%}
    {%- capture indicators -%}
      {%- if section.settings.carousel_on_desktop -%}
        <div class="indicators hidden lg:flex gap-2d5">
          <button class="button button--secondary" type="button" is="previous-button" aria-controls="Slider-{{ section.id }}" aria-label="{{ 'general.pagination.previous' | t | escape }}" disabled>
            <span class="btn-fill" data-fill></span>
            <span class="btn-text">
              {%- render 'icon', icon: 'chevron-left', class: 'transform' -%}
            </span>
          </button>
          <button class="button button--secondary" type="button" is="next-button" aria-controls="Slider-{{ section.id }}" aria-label="{{ 'general.pagination.next' | t | escape }}">
            <span class="btn-fill" data-fill></span>
            <span class="btn-text">
              {%- render 'icon', icon: 'chevron-right', class: 'transform' -%}
            </span>
          </button>
        </div>
        <p class="lg:hidden">{{ view_all }}</p>
      {%- else -%}
        <p>{{ view_all }}</p>
      {%- endif -%}
    {%- endcapture -%}
    {%- render 'section-heading', section: section, section_button: indicators -%}

    <slider-element id="Slider-{{ section.id }}" class="grid slider{% if section.settings.carousel_on_desktop %} slider--desktop{% endif %}{% if section.settings.swipe_on_mobile %} slider--tablet{% endif %}" selector=".card-grid>.card">
      <motion-list class="product-grid card-grid card-grid--{{ section.settings.columns }} mobile:card-grid--{{ section.settings.columns_mobile }} grid">
        {%- for product in products limit: section.settings.product_limit -%}
          {%- render 'cg_product-card', 
            product: product, 
            product_id: product.id,
            section_id: section.id,
            lazy_load: false,
            image_ratio: settings.product_image_ratio,
            image_fill: settings.product_image_fill,
            show_secondary_image: settings.product_secondary_image,
            show_vendor: settings.product_vendor,
            show_rating: settings.product_rating,
            show_color_swatches: settings.product_color_swatches,
            show_countdown: settings.product_countdown,
            show_quick_add: settings.product_quick_add,
            show_quick_view: settings.product_quick_view,
            show_save_amount: settings.product_save_amount,
            save_type: settings.product_save_type,
            show_icon_list: settings.product_icon_list, 
          -%}
        {%- else -%}
          {%- for i in (1..section.settings.product_limit) -%}
            {%- capture placeholder -%}product-{% cycle '1', '2', '3', '4', '5', '6' %}{%- endcapture -%}
            {%- render 'product-card-placeholder',
              lazy_load: false,
              image_ratio: settings.product_image_ratio,
              image_fill: settings.product_image_fill,
              show_secondary_image: settings.product_secondary_image,
              show_vendor: settings.product_vendor,
              show_rating: settings.product_rating,
              show_color_swatches: settings.product_color_swatches,
              show_countdown: settings.product_countdown,
              show_quick_add: settings.product_quick_add,
              show_quick_view: settings.product_quick_view,
              show_save_amount: settings.product_save_amount,
              save_type: settings.product_save_type,
              placeholder: placeholder
            -%}
          {%- endfor -%}
        {%- endfor -%}
      </motion-list>

      {%- if section.settings.heading == blank and section.settings.subheading == blank and section.settings.description == blank -%}
        {%- if section.settings.carousel_on_desktop -%}
          <div class="indicators hidden lg:flex gap-2d5 items-center absolute top-0 left-0 w-full h-full pointer-events-none opacity-0 page-width">
            <button class="button button--primary pointer-events-auto" type="button" is="previous-button" aria-controls="Slider-{{ section.id }}" aria-label="{{ 'general.pagination.previous' | t | escape }}" disabled>
              <span class="btn-fill" data-fill></span>
              <span class="btn-text">
                {%- render 'icon', icon: 'chevron-left', class: 'stroke-2 transform' -%}
              </span>
            </button>
            <button class="button button--primary pointer-events-auto" type="button" is="next-button" aria-controls="Slider-{{ section.id }}" aria-label="{{ 'general.pagination.next' | t | escape }}">
              <span class="btn-fill" data-fill></span>
              <span class="btn-text">
                {%- render 'icon', icon: 'chevron-right', class: 'stroke-2 transform' -%}
              </span>
            </button>
          </div>
        {%- endif -%}
      {%- endif -%}
    </slider-element>

    {%- if section.settings.carousel_on_desktop -%}
      <p class="hidden lg:block">{{ view_all }}</p>
    {%- endif -%}
  </div>
</div>

<script>
  $(document).ready(function () { 
    if($(window).width() > 767) { 
      /* Assign on desktop and tablet */
      $(".section-{{ section.id }} motion-list").draggable({ 
        axis: 'x',
        scroll: false,
        drag: function (event, ui) {
          var containerWidth = $(".section-{{ section.id }} slider-element").width(); 
          var draggableWidth = $(".section-{{ section.id }} motion-list").outerWidth(); 
          var maxLeftPosition = containerWidth - draggableWidth; 
          ui.position.left = Math.min(0, Math.max(maxLeftPosition, ui.position.left)); 
        }
      }).addClass('active'); 
    } else { 
      /* Remove from mobile */
      $(".section-{{ section.id }} motion-list").draggable("destroy"); 
    }

    /* Fix color swatch active not triggering bug */
    $("#shopify-section-{{ section.id }} .product-card .swatches .color-swatch").on("click", function() { 
      $(this).parent().parent().find(".color-swatch").removeClass("active"); 
      $(this).addClass("active"); 
    }); 
  }); 
</script>

