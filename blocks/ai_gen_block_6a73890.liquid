        alt="{{ block.settings.desktop_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.desktop_image.width }}"
        height="{{ block.settings.desktop_image.height }}"
        class="ai-hero-banner-image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-hero-banner-image-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-hero-banner-empty-state-{{ ai_gen_id }}">
          Next, add desktop and mobile images
        </div>
      </div>
    {% endif %}
  </picture>

  <div class="ai-hero-banner-overlay-{{ ai_gen_id }}"></div>

  <div class="ai-hero-banner-content-wrapper-{{ ai_gen_id }}">
    <div class="ai-hero-banner-content-{{ ai_gen_id }}">
      {% if block.settings.show_subheading and block.settings.subheading != blank %}
        <p class="ai-hero-banner-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
      {% endif %}

      {% if block.settings.show_heading and block.settings.heading != blank %}
        <h2 class="ai-hero-banner-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      {% if block.settings.show_countdown %}
        <div class="ai-hero-banner-countdown-{{ ai_gen_id }}">
          <div class="ai-hero-banner-countdown-timer-{{ ai_gen_id }}" data-countdown-timer>
            <div class="ai-hero-banner-countdown-unit-{{ ai_gen_id }}">
              <span class="ai-hero-banner-countdown-value-{{ ai_gen_id }}" data-days>00</span>
              <span class="ai-hero-banner-countdown-label-{{ ai_gen_id }}">Days</span>
            </div>
            <div class="ai-hero-banner-countdown-unit-{{ ai_gen_id }}">
              <span class="ai-hero-banner-countdown-value-{{ ai_gen_id }}" data-hours>00</span>
              <span class="ai-hero-banner-countdown-label-{{ ai_gen_id }}">Hours</span>
            </div>
            <div class="ai-hero-banner-countdown-unit-{{ ai_gen_id }}">
              <span class="ai-hero-banner-countdown-value-{{ ai_gen_id }}" data-minutes>00</span>
              <span class="ai-hero-banner-countdown-label-{{ ai_gen_id }}">Mins</span>
            </div>
            <div class="ai-hero-banner-countdown-unit-{{ ai_gen_id }}">
              <span class="ai-hero-banner-countdown-value-{{ ai_gen_id }}" data-seconds>00</span>
              <span class="ai-hero-banner-countdown-label-{{ ai_gen_id }}">Secs</span>
            </div>
          </div>
        </div>
      {% endif %}

      {% if block.settings.show_description and block.settings.description != blank %}
        <p class="ai-hero-banner-description-{{ ai_gen_id }}">{{ block.settings.description }}</p>
      {% endif %}

      {% if block.settings.show_button and block.settings.button_text != blank %}
        <div class="ai-hero-banner-button-wrapper-{{ ai_gen_id }}">
          <a href="{{ block.settings.button_link }}" class="ai-hero-banner-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</hero-banner-{{ ai_gen_id }}>

<script>
  (function() {
    class HeroBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.countdownDate = this.dataset.countdownDate;
        this.countdownTimer = this.querySelector('[data-countdown-timer]');
        this.daysEl = this.querySelector('[data-days]');
        this.hoursEl = this.querySelector('[data-hours]');
        this.minutesEl = this.querySelector('[data-minutes]');
        this.secondsEl = this.querySelector('[data-seconds]');
      }

      connectedCallback() {
        if (this.countdownTimer && this.countdownDate) {
          this.startCountdown();
          this.interval = setInterval(() => this.startCountdown(), 1000);
        }
      }

      disconnectedCallback() {
        if (this.interval) {
          clearInterval(this.interval);
        }
      }

      startCountdown() {
        const targetDate = new Date(this.countdownDate).getTime();
        const now = new Date().getTime();
        const distance = targetDate - now;

        if (distance < 0) {
          this.daysEl.textContent = '00';
          this.hoursEl.textContent = '00';
          this.minutesEl.textContent = '00';
          this.secondsEl.textContent = '00';
          if (this.interval) {
            clearInterval(this.interval);
          }
          return;
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        this.daysEl.textContent = String(days).padStart(2, '0');
        this.hoursEl.textContent = String(hours).padStart(2, '0');
        this.minutesEl.textContent = String(minutes).padStart(2, '0');
        this.secondsEl.textContent = String(seconds).padStart(2, '0');
      }
    }

    customElements.define('hero-banner-{{ ai_gen_id }}', HeroBanner{{ ai_gen_id }});
  })();
</script>

