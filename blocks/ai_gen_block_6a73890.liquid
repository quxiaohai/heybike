    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-hero-banner-{{ ai_gen_id }}--adapt-desktop {
    height: auto;
  }

  .ai-hero-banner-{{ ai_gen_id }}--custom-desktop {
    height: {{ block.settings.desktop_custom_height }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-banner-{{ ai_gen_id }}--adapt-mobile {
      height: auto;
    }

    .ai-hero-banner-{{ ai_gen_id }}--custom-mobile {
      height: {{ block.settings.mobile_custom_height }}px;
    }
  }

