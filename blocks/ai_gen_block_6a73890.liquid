      font-size: {{ block.settings.mobile_countdown_size }}px;
      justify-content: {% if block.settings.mobile_text_align == 'left' %}flex-start{% elsif block.settings.mobile_text_align == 'center' %}center{% else %}flex-end{% endif %};
