        {% for block in section.blocks %}
          {% if block.settings.product_img != blank %}
            <td>
              <style>
                #shopify-section-{{ section.id }} td:has(.product-{{ forloop.index }}) { 
                  {% if block.settings.product_order != blank %}
                    order: {{ block.settings.product_order }}; 
                  {% endif %}
                }
              </style>
              <img width="360" height="326" class="product-img product-{{ forloop.index }}" src="{{ block.settings.product_img | img_url: 'master' }}" />
            </td>
          {% endif %}
        {% endfor %}
      </tr>
      <tr>
        <th></th>
        {% for block in section.blocks %}
          {% if block.settings.product_name != blank %}
            <td>
              <h3 class="product-name product-{{ forloop.index }}">{{ block.settings.product_name }}</h3>
            </td>
          {% endif %}
        {% endfor %}
      </tr>
      <tr>
        <th></th>
        {% for block in section.blocks %}
          {% if block.settings.product_desc != blank %}
            <td>
              <div class="product-desc product-{{ forloop.index }}">{{ block.settings.product_desc }}</di>
            </td>
          {% endif %}
        {% endfor %}
      </tr>
      <tr>
        <th></th>
        {% for block in section.blocks %}
          {% if block.settings.product_price != blank %}
            <td>
              <p class="product-price product-{{ forloop.index }}">{{ block.settings.product_price }}</p>
            </td>
          {% endif %}
        {% endfor %}
      </tr>
      <tr>
        <th></th>
        {% for block in section.blocks %}
          {% if block.settings.product_url != blank or block.settings.btn_caption != blank %}
            <td>
              <a class="product-url product-{{ forloop.index }} button button--secondary icon-with-text" href="{{ block.settings.product_url }}" role="link" aria-disabled="true" is="hover-link">
                <span class="btn-fill" data-fill></span>
                <span class="btn-text">
                  {{ block.settings.btn_caption }}
                  {% render 'icon', icon: 'cg_buy-btn-arrow-right' %}
                </span>
              </a>
            </td>
          {% endif %}
        {% endfor %}
      </tr>
    </thead>
