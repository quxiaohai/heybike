<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- render 'section-variables', section: section -%}
  }

  #shopify-section-{{ section.id }} .section-header { 
    display: flex; 
    justify-content: space-between; 
  }

  #shopify-section-{{ section.id }} .arrows-row { 
    display: flex; 
    gap: 12px; 
  }

  #shopify-section-{{ section.id }} .slick-arrow { 
    position: static; 
    width: 60px; 
    height: 60px; 
    aspect-ratio: 1; 
    border: 1px solid var(--color-lemon-yellow); 
    border-radius: 4px; 
    background-color: var(--color-lemon-yellow); 
    padding: 0;
    transform: unset; 
  }

  #shopify-section-{{ section.id }} .slick-arrow:hover .icon { 
    stroke: var(--color-primary); 
  }

  #shopify-section-{{ section.id }} .slick-arrow:before {
    content: none; 
  }

  #shopify-section-{{ section.id }} .slick-arrow .btn-fill {
    transform: translateY(100%); 
    transition: transform .6s; 
  }

  #shopify-section-{{ section.id }} .slick-arrow:hover .btn-fill {
    transform: translateY(0); 
  }

  #shopify-section-{{ section.id }} .slick-disabled {
    opacity: .3; 
    pointer-events: none;
    border-color: var(--color-black); 
    background-color: unset;
  }

  #shopify-section-{{ section.id }} .slick-disabled .btn-fill {
    display: none; 
  }

  #shopify-section-{{ section.id }} .icon { 
    stroke: var(--color-black);
  }

  #shopify-section-{{ section.id }} .card-grid { 
    display: none; 
    margin: 0 -.5rem; 
  }

  #shopify-section-{{ section.id }} .slick-list { 
    cursor: grab; 
  }

  #shopify-section-{{ section.id }} .card-grid.slick-initialized { 
    display: block; 
  }

  #shopify-section-{{ section.id }} .card-item { 
    padding: 0 .5rem; 
  }

  /* Reponsive */
  /* Mobile */
  @media (max-width: 767px) { 
    #shopify-section-{{ section.id }} .arrows-row { 
      display: none; 
    }
  }
</style>

<recently-viewed class="recently-viewed block" data-url="{{ routes.search_url }}?section_id={{ section.id }}&type=product&q=" data-limit="{{ section.settings.product_limit }}"{% if request.page_type == 'product' %} data-product-id="{{ product.id }}"{% endif %}>
  {%- if request.page_type == 'search' and search.performed and search.results_count > 0 -%}
    <div class="section section--padding{% if section.settings.divider %} section--divider{% endif %}{% if section.settings.rounded %} section--rounded relative{% endif %}">
      {% assign parsed_terms = search.terms | split: ' OR ' %}
      {% capture recent_results %}
        {% for parsed_term in parsed_terms %}
          {% assign product_id = parsed_term | split: 'id:' | last | times: 1 %}
          {% for item in search.results %}
            {% if item.id == product_id %}
              <li class="card-item">
                {% render 'cg_product-card', product: item, product_id: item.id, section_id: section.id, lazy_load: false, image_ratio: settings.product_image_ratio, image_fill: settings.product_image_fill, show_secondary_image: settings.product_secondary_image, show_vendor: settings.product_vendor, show_rating: settings.product_rating, show_color_swatches: settings.product_color_swatches, show_countdown: settings.product_countdown, show_quick_add: settings.product_quick_add, show_quick_view: settings.product_quick_view, show_save_amount: settings.product_save_amount, save_type: settings.product_save_type, show_icon_list: settings.product_icon_list %}
              </li>
            {% endif %}
          {% endfor %}
        {% endfor %}
      {% endcapture %}
      <div class="page-width{% if section.settings.full_width %} page-width--full{% endif %} relative overflow-hidden md:overflow-visible">
        <div class="section-header">
          {%- render 'section-heading', section: section, section_button: indicators -%}
          <div class="arrows-row">
            <button class="slick-prev slick-arrow button button--secondary">
              <span class="btn-fill" data-fill></span>
              <span class="btn-text">
                {% render 'icon', icon: 'chevron-left', class: 'transform' %}
              </span>
            </button>
            <button class="slick-next slick-arrow button button--secondary">
              <span class="btn-fill" data-fill></span>
              <span class="btn-text">
                {% render 'icon', icon: 'chevron-right', class: 'transform' %}
              </span>
            </button>
          </div>
        </div>
        {%- if recent_results != blank -%}
          <ul class="card-grid card-grid--{{ section.settings.columns }} mobile:card-grid--{{ section.settings.columns_mobile }}">
            {{- recent_results -}}
          </ul>
        {%- endif -%}
      </div>
    </div>
  {%- endif -%}
</recently-viewed>

<script>
  $(document).ready(function() { 
    setTimeout(() => { 
      $('#shopify-section-{{ section.id }} .card-grid').slick({ 
    	arrows: true, 
		dots: false, 
		infinite: false, 
        {% if section.settings.columns != blank %}
    		slidesToShow: {{ section.settings.columns }}, 
        {% endif %}
		slidesToScroll: 1, 
        prevArrow: $('#shopify-section-{{ section.id }} .arrows-row .slick-prev'), 
        nextArrow: $('#shopify-section-{{ section.id }} .arrows-row .slick-next'), 
        responsive: [
            { breakpoint: 1366, 
              settings: { 
                {% if section.settings.columns != blank %}
            		slidesToShow: {{ section.settings.columns }}, 
                {% endif %}
              }
            }, 
			{ breakpoint: 768, settings: { slidesToShow: 3 } }, 
			{ breakpoint: 767, 
              settings: { 
                {% if section.settings.columns_mobile !=blank %}
                  slidesToShow: {{ section.settings.columns_mobile }}
                {% endif %}
              }
            }
		]
      }); 
    }, 5000); 
  }); 
</script>

