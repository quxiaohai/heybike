      padding: {{ block.settings.mobile_padding_top }}px {{ block.settings.mobile_padding_right }}px {{ block.settings.mobile_padding_bottom }}px {{ block.settings.mobile_padding_left }}px;
      align-items: {% if block.settings.mobile_vertical_align == 'top' %}flex-start{% elsif block.settings.mobile_vertical_align == 'middle' %}center{% else %}flex-end{% endif %};
      justify-content: {% if block.settings.mobile_horizontal_align == 'left' %}flex-start{% elsif block.settings.mobile_horizontal_align == 'center' %}center{% else %}flex-end{% endif %};
    }
  }

  .ai-hero-banner-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
    {% if block.settings.desktop_content_width == 'custom' %}
      width: {{ block.settings.desktop_content_width_custom }}px;
    {% else %}
      width: {% if block.settings.desktop_content_width == 'small' %}400px{% elsif block.settings.desktop_content_width == 'medium' %}600px{% else %}800px{% endif %};
    {% endif %}
