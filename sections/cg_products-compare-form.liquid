<style>
  #shopify-section-{{ section.id }} { 
    {% if section.settings.bg_color != blank %}
      background-color: {{ section.settings.bg_color }}; 
    {% endif %}
  }

  #shopify-section-{{ section.id }} .products-compare-form-container {
    max-width: 1440px; 
    margin: 0 auto; 
    padding: 72px 20px; 
  }

  #shopify-section-{{ section.id }} .section-header { 
    text-align: center; 
  }

  #shopify-section-{{ section.id }} .section-heading { 
    line-height: normal; 
    margin-bottom: 12px; 
    font-size: 3rem; 
  }

  #shopify-section-{{ section.id }} .section-desc { 
    font-size: 1rem; 
  }
  
  #shopify-section-{{ section.id }} .products-compare-form { 
    width: 100%; 
    box-shadow: unset; 
    border-radius: 0; 
  }

  #shopify-section-{{ section.id }} .products-compare-form tr {
    display: flex; 
  }

  #shopify-section-{{ section.id }} .products-compare-form th, 
  #shopify-section-{{ section.id }} .products-compare-form td { 
    display: flex; 
    justify-content: center; 
    align-items: center; 
    padding: 0; 
  }

  #shopify-section-{{ section.id }} .products-compare-form th, 
  #shopify-section-{{ section.id }} .products-compare-form td * { 
    text-align: center; 
  }

  #shopify-section-{{ section.id }} .products-compare-form th { 
    width: calc(160vw / 19.2); 
    line-height: normal; 
    background-color: unset; 
    font-size: 1rem; 
    order: 1; 
  }

  #shopify-section-{{ section.id }} .products-compare-form td { 
    flex: 1; 
  }

  #shopify-section-{{ section.id }} .products-compare-form tbody td {
    padding: 32px 0; 
  }

  #shopify-section-{{ section.id }}  .product-img, 
  #shopify-section-{{ section.id }} .product-name,
  #shopify-section-{{ section.id }} .product-desc * { 
    margin-bottom: 8px; 
  }

  #shopify-section-{{ section.id }} .product-desc {
    font-size: 1rem; 
  }

  #shopify-section-{{ section.id }} .product-price { 
    padding: 24px 0; 
  }

  #shopify-section-{{ section.id }} .product-url { 
    display: flex; 
    border: none; 
    border-radius: 12px; 
    margin-bottom: 20px; 
    padding: 16px 24px; 
    background-color: #FFDB00; 
    font-size: 1rem; 
    font-weight: 700; 
  }

  #shopify-section-{{ section.id }} .product-url:after {
    content: none; 
  }

  #shopify-section-{{ section.id }} .product-url svg { 
    transition: filter .3s; 
  }

  #shopify-section-{{ section.id }} .product-url:hover svg {
    filter: invert(1); 
  }

  #shopify-section-{{ section.id }} .product-url:hover svg path {
    stroke: unset;
  }

  /* Repsonsive */
  /* Mobile */
  @media (max-width: 767px) { 
    #shopify-section-{{ section.id }} .section-header { 
      margin-bottom: 24px; 
    }
    
    #shopify-section-{{ section.id }} .section-heading { 
      font-size: 24px; 
    }

    #shopify-section-{{ section.id }} .section-desc { 
      font-size: 14px; 
    }

    #shopify-section-{{ section.id }} .products-compare-form thead {
      padding-top: 16px; 
    }

    #shopify-section-{{ section.id }} .products-compare-form tr {
      flex-wrap: wrap; 
      padding: 12px 0; 
    }

    #shopify-section-{{ section.id }} .products-compare-form thead tr { 
      gap: 16px; 
      padding: 0; 
    }

    #shopify-section-{{ section.id }} .products-compare-form th {
      width: 100%; 
      margin-bottom: 16px; 
      order: 0; 
    }

    #shopify-section-{{ section.id }} .products-compare-form thead th { 
      margin-bottom: 0; 
    }

    #shopify-section-{{ section.id }} .product-img {
      width: 140px; 
      max-width: unset; 
    }

    #shopify-section-{{ section.id }} .product-desc, 
    #shopify-section-{{ section.id }} .product-price {
      font-size: 16px; 
    }

    #shopify-section-{{ section.id }} .product-price { 
      padding: 24px 0 16px 0; 
    }

    #shopify-section-{{ section.id }} .product-url {
      width: 100%; 
      margin-bottom: 16px; 
    }

    #shopify-section-{{ section.id }} .products-compare-form tbody td {
      padding: 0; 
    }
  }

  /* Tablet */
  @media (min-width: 768px) and (max-width: 1366px) { 
    #shopify-section-{{ section.id }} .products-compare-form th { 
      width: calc(160vw / 13.66); 
    }
  }

  /* Desktop */
  @media (min-width: 1920px) {
    #shopify-section-{{ section.id }} .products-compare-form th { 
      width: 160px; 
    }
  }
</style>

<!-- View -->
<div class="products-compare-form-container">
  <div class="section-header">
